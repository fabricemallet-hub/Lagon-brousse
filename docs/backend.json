
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "role": { "type": "string", "enum": ["client", "professional", "admin"], "description": "Rôle de l'utilisateur déterminant ses permissions." },
        "subscriptionStatus": { "type": "string", "enum": ["active", "inactive", "trial", "admin", "professional"] },
        "businessId": { "type": "string", "description": "ID du commerce associé pour les pros" },
        "lastSelectedLocation": { "type": "string" },
        "favoriteCategory": { "type": "string", "enum": ["Pêche", "Chasse", "Jardinage"] },
        "notificationsEnabled": { "type": "boolean" },
        "cgvVersionSeen": { "type": "integer" }
      },
      "required": ["id", "email", "role"]
    },
    "Business": {
      "title": "Business",
      "type": "object",
      "description": "Représente un commerce professionnel sur la plateforme.",
      "properties": {
        "id": { "type": "string" },
        "ownerId": { "type": "string" },
        "name": { "type": "string" },
        "commune": { "type": "string" },
        "categories": { "type": "array", "items": { "type": "string" } },
        "logoUrl": { "type": "string" },
        "description": { "type": "string" },
        "createdAt": { "type": "object" }
      },
      "required": ["ownerId", "name", "commune"]
    },
    "Promotion": {
      "title": "Promotion",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "businessId": { "type": "string" },
        "title": { "type": "string" },
        "price": { "type": "number" },
        "promoType": { "type": "string", "enum": ["Promo", "Nouvel Arrivage"] },
        "imageUrl": { "type": "string" },
        "createdAt": { "type": "object" }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": {
      "/users/{userId}": {
        "schema": { "$ref": "#/backend/entities/User" },
        "description": "Profils utilisateurs incluant les rôles"
      },
      "/businesses/{businessId}": {
        "schema": { "$ref": "#/backend/entities/Business" },
        "description": "Commerces professionnels"
      },
      "/businesses/{businessId}/promotions/{promoId}": {
        "schema": { "$ref": "#/backend/entities/Promotion" },
        "description": "Promotions par commerce"
      }
    }
  }
}
