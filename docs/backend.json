
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "role": { "type": "string", "enum": ["client", "professional", "admin"] },
        "subscriptionStatus": { "type": "string", "enum": ["active", "inactive", "trial", "admin"] },
        "businessId": { "type": "string", "description": "ID du commerce associé pour les pros" },
        "lastSelectedLocation": { "type": "string" },
        "favoriteCategory": { "type": "string", "enum": ["Pêche", "Chasse", "Jardinage"] }
      },
      "required": ["id", "email", "role"]
    },
    "Business": {
      "title": "Business",
      "type": "object",
      "description": "Représente un commerce professionnel sur la plateforme.",
      "properties": {
        "id": { "type": "string" },
        "ownerId": { "type": "string" },
        "name": { "type": "string" },
        "commune": { "type": "string" },
        "category": { "type": "string", "enum": ["Pêche", "Chasse", "Jardinage"] },
        "logoUrl": { "type": "string" },
        "description": { "type": "string" },
        "createdAt": { "type": "object" }
      },
      "required": ["ownerId", "name", "commune", "category"]
    },
    "Promotion": {
      "title": "Promotion",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "businessId": { "type": "string" },
        "title": { "type": "string" },
        "price": { "type": "number" },
        "promoType": { "type": "string", "enum": ["Promo", "Nouvel Arrivage"] },
        "imageUrl": { "type": "string" },
        "createdAt": { "type": "object" }
      }
    },
    "Campaign": {
      "title": "Campaign",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "businessId": { "type": "string" },
        "targetCommune": { "type": "string" },
        "targetCategory": { "type": "string" },
        "reach": { "type": "integer" },
        "cost": { "type": "number" },
        "status": { "type": "string", "enum": ["pending", "sent"] },
        "createdAt": { "type": "object" }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Profils utilisateurs incluant les rôles"
        }
      },
      {
        "path": "/businesses/{businessId}",
        "definition": {
          "entityName": "Business",
          "schema": { "$ref": "#/backend/entities/Business" },
          "description": "Commerces professionnels"
        }
      },
      {
        "path": "/businesses/{businessId}/promotions/{promoId}",
        "definition": {
          "entityName": "Promotion",
          "schema": { "$ref": "#/backend/entities/Promotion" },
          "description": "Promotions par commerce"
        }
      },
      {
        "path": "/campaigns/{campaignId}",
        "definition": {
          "entityName": "Campaign",
          "schema": { "$ref": "#/backend/entities/Campaign" },
          "description": "Campagnes de notifications et facturation"
        }
      }
    ]
  }
}
