
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application with subscription details.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "subscriptionStatus": { "type": "string", "enum": ["active", "inactive", "trial", "admin"] },
        "subscriptionExpiryDate": { "type": "string", "format": "date-time" },
        "lastSelectedLocation": { "type": "string" },
        "emergencyContact": { "type": "string" },
        "mapIcon": { "type": "string" },
        "mapColor": { "type": "string" },
        "fcmToken": { "type": "string", "description": "Token pour les notifications Push" },
        "notificationsEnabled": { "type": "boolean" },
        "savedVesselIds": { "type": "array", "items": { "type": "string" } },
        "lastVesselId": { "type": "string" },
        "vesselPrefs": { "type": "object" }
      },
      "required": ["id", "email", "subscriptionStatus"]
    },
    "UserVesselSafety": {
      "title": "UserVesselSafety",
      "type": "object",
      "description": "Information sur la sécurité d'un navire utilisateur.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "vesselName": { "type": "string" },
        "equipment": {
          "type": "array",
          "items": {
            "object",
            "properties": {
              "id": { "type": "string" },
              "type": { "type": "string", "enum": ["fusée", "extincteur", "autre"] },
              "label": { "type": "string" },
              "expiryDate": { "type": "string", "format": "date" }
            }
          }
        },
        "createdAt": { "type": "object" }
      },
      "required": ["vesselName", "userId"]
    },
    "FaqEntry": {
      "title": "FaqEntry",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "question": { "type": "string" },
        "reponse": { "type": "string" },
        "categorie": { "type": "string", "enum": ["General", "Peche", "Boat Tracker", "Chasse", "Champs", "Compte"] },
        "ordre": { "type": "integer" },
        "views": { "type": "integer", "description": "Nombre de consultations pour le classement dynamique" }
      },
      "required": ["question", "reponse", "categorie"]
    },
    "SupportTicket": {
      "title": "SupportTicket",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "userEmail": { "type": "string" },
        "sujet": { "type": "string" },
        "description": { "type": "string" },
        "statut": { "type": "string", "enum": ["ouvert", "ferme"] },
        "createdAt": { "type": "object" },
        "captureUrl": { "type": "string" }
      },
      "required": ["userId", "sujet", "description"]
    },
    "GardenPlant": {
      "title": "GardenPlant",
      "type": "object",
      "description": "A plant currently growing in the user's garden.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "name": { "type": "string" },
        "category": { "type": "string", "enum": ["Arbre Fruitier", "Potager", "Fleur", "Aromatique", "Autre"] },
        "plantingDate": { "type": "string", "format": "date-time" },
        "notes": { "type": "string" },
        "lastAdvice": { "type": "object" }
      },
      "required": ["name", "category"]
    },
    "VesselStatus": {
      "title": "VesselStatus",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "displayName": { "type": "string" },
        "status": { "type": "string", "enum": ["moving", "stationary", "offline", "returning", "landed"] },
        "isSharing": { "type": "boolean" }
      }
    },
    "SpotShare": {
      "title": "SpotShare",
      "type": "object",
      "description": "Partage de point GPS entre utilisateurs",
      "properties": {
        "id": { "type": "string" },
        "senderId": { "type": "string" },
        "senderName": { "type": "string" },
        "recipientEmail": { "type": "string" },
        "spotData": { "type": "object" },
        "createdAt": { "type": "object" }
      },
      "required": ["senderId", "recipientEmail", "spotData"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/cms_support/faq/items/{id}",
        "definition": {
          "entityName": "FaqEntry",
          "schema": { "$ref": "#/backend/entities/FaqEntry" },
          "description": "Base de connaissances dynamique (FAQ)"
        }
      },
      {
        "path": "/cms_support/tickets/items/{id}",
        "definition": {
          "entityName": "SupportTicket",
          "schema": { "$ref": "#/backend/entities/SupportTicket" },
          "description": "Tickets de support utilisateur"
        }
      },
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Profils utilisateurs"
        }
      },
      {
        "path": "/users/{userId}/vessels_safety/{id}",
        "definition": {
          "entityName": "UserVesselSafety",
          "schema": { "$ref": "#/backend/entities/UserVesselSafety" },
          "description": "Gestion de la sécurité des navires privés"
        }
      },
      {
        "path": "/spot_shares/{id}",
        "definition": {
          "entityName": "SpotShare",
          "schema": { "$ref": "#/backend/entities/SpotShare" },
          "description": "Transfert de spots entre utilisateurs"
        }
      }
    ]
  }
}
