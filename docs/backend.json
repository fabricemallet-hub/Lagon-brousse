
{
  "entities": {
    "UserAccount": {
      "title": "UserAccount",
      "type": "object",
      "description": "Profil utilisateur complet.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string" },
        "displayName": { "type": "string" },
        "subscriptionStatus": { "type": "string", "enum": ["active", "inactive", "trial", "admin"] },
        "subscriptionExpiryDate": { "type": "string" },
        "lastSelectedLocation": { "type": "string" },
        "emergencyContact": { "type": "string" },
        "mapIcon": { "type": "string" },
        "mapColor": { "type": "string" }
      },
      "required": ["id", "email", "subscriptionStatus"]
    },
    "HuntingSession": {
      "title": "HuntingSession",
      "type": "object",
      "properties": {
        "organizerId": { "type": "string" },
        "createdAt": { "type": "string" },
        "expiresAt": { "type": "string" }
      }
    },
    "FishingSpot": {
      "title": "FishingSpot",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "name": { "type": "string" },
        "location": { "type": "object" },
        "context": { "type": "object" }
      }
    },
    "AppSettings": {
      "title": "AppSettings",
      "type": "object",
      "description": "Paramètres globaux de l'application.",
      "properties": {
        "splashMode": { "type": "string", "enum": ["text", "image"] },
        "splashText": { "type": "string" },
        "splashTextColor": { "type": "string" },
        "splashFontSize": { "type": "string" },
        "splashBgColor": { "type": "string" },
        "splashImageUrl": { "type": "string" },
        "splashImageFit": { "type": "string", "enum": ["cover", "contain"] }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/UserAccount" },
      "description": "Données utilisateurs et préférences."
    },
    "/hunting_sessions/{sessionId}": {
      "schema": { "$ref": "#/backend/entities/HuntingSession" },
      "description": "Sessions de chasse de groupe."
    },
    "/hunting_sessions/{sessionId}/participants/{userId}": {
      "description": "Statut temps réel des participants."
    },
    "/users/{userId}/fishing_spots/{spotId}": {
      "schema": { "$ref": "#/backend/entities/FishingSpot" },
      "description": "Carnet de pêche personnel."
    },
    "/vessels/{vesselId}": {
      "description": "Tracker maritime en temps réel."
    },
    "/conversations/{conversationId}": {
      "description": "Support et messagerie admin."
    },
    "/app_settings/{settingId}": {
      "schema": { "$ref": "#/backend/entities/AppSettings" },
      "description": "Configuration globale du splash screen."
    }
  }
}
