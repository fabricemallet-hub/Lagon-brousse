
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application with subscription details.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "subscriptionStatus": { "type": "string", "enum": ["active", "inactive", "trial", "admin"] },
        "subscriptionExpiryDate": { "type": "string", "format": "date-time" },
        "lastSelectedLocation": { "type": "string" },
        "emergencyContact": { "type": "string" },
        "mapIcon": { "type": "string" },
        "mapColor": { "type": "string" }
      },
      "required": ["id", "email", "subscriptionStatus"]
    },
    "MeteoLive": {
      "title": "MeteoLive",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "Nom de la commune" },
        "vent": { "type": "number" },
        "temperature": { "type": "number" },
        "uv": { "type": "number" },
        "direction_vent": { "type": "number", "description": "Direction en degrés (0-360)" }
      }
    },
    "MeteoForecast": {
      "title": "MeteoForecast",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "jour_1, jour_2..." },
        "code_meteo": { "type": "number" },
        "date": { "type": "string" },
        "prob_pluie": { "type": "number" },
        "rafales_max": { "type": "number" },
        "temp_max": { "type": "number" },
        "temp_min": { "type": "number" },
        "vent_max": { "type": "number" }
      }
    },
    "FishSpecies": {
      "title": "FishSpecies",
      "type": "object",
      "description": "Information about a fish species in New Caledonia.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "scientificName": { "type": "string" },
        "gratteRisk": { "type": "number" },
        "culinaryAdvice": { "type": "string" },
        "fishingAdvice": { "type": "string" },
        "category": { "type": "string", "enum": ["Lagon", "Large", "Recif"] },
        "imageUrl": { "type": "string" },
        "imagePlaceholder": { "type": "string" }
      },
      "required": ["name", "category"]
    },
    "AppSetting": {
      "title": "AppSetting",
      "type": "object",
      "properties": {
        "splashMode": { "type": "string" },
        "splashText": { "type": "string" },
        "splashBgColor": { "type": "string" },
        "splashDuration": { "type": "number" },
        "splashImageUrl": { "type": "string" },
        "splashTextColor": { "type": "string" },
        "splashFontSize": { "type": "string" },
        "splashImageFit": { "type": "string" }
      }
    },
    "HuntingSession": {
      "title": "HuntingSession",
      "type": "object",
      "properties": {
        "organizerId": { "type": "string" },
        "createdAt": { "type": "object" },
        "expiresAt": { "type": "object" }
      }
    },
    "VesselStatus": {
      "title": "VesselStatus",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "displayName": { "type": "string" },
        "location": { 
          "type": "object",
          "properties": {
            "latitude": { "type": "number" },
            "longitude": { "type": "number" }
          }
        },
        "status": { "type": "string", "enum": ["moving", "stationary", "offline"] },
        "isSharing": { "type": "boolean" },
        "lastActive": { "type": "object" }
      }
    },
    "SystemNotification": {
      "title": "SystemNotification",
      "type": "object",
      "description": "Message global diffusé à tous les utilisateurs.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "content": { "type": "string" },
        "type": { "type": "string", "enum": ["info", "warning", "error", "success"] },
        "isActive": { "type": "boolean" },
        "createdAt": { "type": "object" }
      },
      "required": ["title", "content", "type", "isActive"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/app_settings/{id}",
        "definition": {
          "entityName": "AppSetting",
          "schema": { "$ref": "#/backend/entities/AppSetting" },
          "description": "Configuration globale de l'application (Splash screen, etc.)"
        }
      },
      {
        "path": "/meteo_caledonie/{communeId}",
        "definition": {
          "entityName": "MeteoLive",
          "schema": { "$ref": "#/backend/entities/MeteoLive" },
          "description": "Données météo en temps réel pour les communes de NC"
        }
      },
      {
        "path": "/meteo_caledonie/{communeId}/previsions/{prevId}",
        "definition": {
          "entityName": "MeteoForecast",
          "schema": { "$ref": "#/backend/entities/MeteoForecast" },
          "description": "Prévisions météo journalières sur 7 jours"
        }
      },
      {
        "path": "/fish_species/{fishId}",
        "definition": {
          "entityName": "FishSpecies",
          "schema": { "$ref": "#/backend/entities/FishSpecies" },
          "description": "Catalogue complet des poissons du lagon et du large"
        }
      },
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Profils utilisateurs et statut d'abonnement"
        }
      },
      {
        "path": "/hunting_sessions/{sessionId}",
        "definition": {
          "entityName": "HuntingSession",
          "schema": { "$ref": "#/backend/entities/HuntingSession" },
          "description": "Sessions de chasse collective"
        }
      },
      {
        "path": "/vessels/{vesselId}",
        "definition": {
          "entityName": "VesselStatus",
          "schema": { "$ref": "#/backend/entities/VesselStatus" },
          "description": "Positions des navires en temps réel"
        }
      },
      {
        "path": "/system_notifications/{notifId}",
        "definition": {
          "entityName": "SystemNotification",
          "schema": { "$ref": "#/backend/entities/SystemNotification" },
          "description": "Messages globaux d'information ou d'alerte"
        }
      }
    ]
  }
}
