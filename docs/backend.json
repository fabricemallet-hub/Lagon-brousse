
{
  "entities": {
    "UserAccount": {
      "title": "UserAccount",
      "type": "object",
      "description": "Represents a user account within the application.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "subscriptionStatus": { "type": "string", "enum": ["active", "inactive", "trial", "admin"] },
        "subscriptionStartDate": { "type": "string", "format": "date-time" },
        "subscriptionExpiryDate": { "type": "string", "format": "date-time" },
        "favoriteLocationIds": { "type": "array", "items": { "type": "string" } },
        "mapIcon": { "type": "string" },
        "mapColor": { "type": "string" },
        "lastSelectedLocation": { "type": "string" },
        "emergencyContact": { "type": "string" }
      },
      "required": ["id", "email", "displayName", "subscriptionStatus"]
    },
    "HuntingSession": {
      "title": "HuntingSession",
      "type": "object",
      "description": "Represents a real-time hunting session.",
      "properties": {
        "organizerId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "expiresAt": { "type": "string", "format": "date-time" }
      },
      "required": ["organizerId", "createdAt", "expiresAt"]
    },
    "SessionParticipant": {
      "title": "SessionParticipant",
      "type": "object",
      "properties": {
        "displayName": { "type": "string" },
        "mapIcon": { "type": "string" },
        "mapColor": { "type": "string" },
        "baseStatus": { "type": "string", "enum": ["En position", "Battue en cours"] },
        "isGibierEnVue": { "type": "boolean" },
        "location": {
          "type": "object",
          "properties": {
            "latitude": { "type": "number" },
            "longitude": { "type": "number" }
          }
        },
        "battery": {
          "type": "object",
          "properties": {
            "level": { "type": "number" },
            "charging": { "type": "boolean" }
          }
        },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["displayName", "updatedAt"]
    },
    "FishingSpot": {
      "title": "FishingSpot",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "name": { "type": "string" },
        "location": {
          "type": "object",
          "properties": {
            "latitude": { "type": "number" },
            "longitude": { "type": "number" }
          }
        },
        "icon": { "type": "string" },
        "color": { "type": "string" },
        "fishingTypes": { "type": "array", "items": { "type": "string" } },
        "createdAt": { "type": "string", "format": "date-time" },
        "context": { "type": "object" }
      },
      "required": ["userId", "name", "location", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/UserAccount" },
      "description": "User profile and settings."
    },
    "/hunting_sessions/{sessionId}": {
      "schema": { "$ref": "#/backend/entities/HuntingSession" },
      "description": "Group hunting sessions."
    },
    "/hunting_sessions/{sessionId}/participants/{userId}": {
      "schema": { "$ref": "#/backend/entities/SessionParticipant" },
      "description": "Participant in a hunting session."
    },
    "/users/{userId}/fishing_spots/{spotId}": {
      "schema": { "$ref": "#/backend/entities/FishingSpot" },
      "description": "Saved fishing spots."
    }
  }
}
