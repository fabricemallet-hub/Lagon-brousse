
{
  "entities": {
    "UserAccount": {
      "title": "UserAccount",
      "type": "object",
      "description": "Compte utilisateur avec statut d'abonnement et préférences.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "subscriptionStatus": { "type": "string", "enum": ["active", "inactive", "trial", "admin"] },
        "subscriptionStartDate": { "type": "string", "format": "date-time" },
        "subscriptionExpiryDate": { "type": "string", "format": "date-time" },
        "lastSelectedLocation": { "type": "string" },
        "emergencyContact": { "type": "string" },
        "mapIcon": { "type": "string" },
        "mapColor": { "type": "string" }
      },
      "required": ["id", "email", "subscriptionStatus"]
    },
    "HuntingSession": {
      "title": "HuntingSession",
      "type": "object",
      "description": "Session de chasse de groupe avec expiration automatique.",
      "properties": {
        "organizerId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "expiresAt": { "type": "string", "format": "date-time" }
      },
      "required": ["organizerId", "createdAt"]
    },
    "SessionParticipant": {
      "title": "SessionParticipant",
      "type": "object",
      "description": "Participant à une session de chasse avec position et statut en temps réel.",
      "properties": {
        "displayName": { "type": "string" },
        "mapIcon": { "type": "string" },
        "mapColor": { "type": "string" },
        "baseStatus": { "type": "string" },
        "isGibierEnVue": { "type": "boolean" },
        "location": {
          "type": "object",
          "properties": {
            "latitude": { "type": "number" },
            "longitude": { "type": "number" }
          }
        },
        "battery": {
          "type": "object",
          "properties": {
            "level": { "type": "number" },
            "charging": { "type": "boolean" }
          }
        },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["displayName", "updatedAt"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/UserAccount" },
      "description": "Profils et préférences utilisateurs."
    },
    "/hunting_sessions/{sessionId}": {
      "schema": { "$ref": "#/backend/entities/HuntingSession" },
      "description": "Sessions de chasse actives."
    },
    "/hunting_sessions/{sessionId}/participants/{userId}": {
      "schema": { "$ref": "#/backend/entities/SessionParticipant" },
      "description": "Données temps réel des participants à une session."
    }
  }
}
