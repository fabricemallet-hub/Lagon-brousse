rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // 1. FONCTIONS DE SÉCURITÉ DE HAUT NIVEAU
    // ======================================================
    
    function isMaster() {
      return request.auth != null && (
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" ||
        request.auth.token.get('email', '').lower() == "f.mallet81@outlook.com" || 
        request.auth.token.get('email', '').lower() == "fabrice.mallet@gmail.com" || 
        request.auth.token.get('email', '').lower() == "f.mallet81@gmail.com"
      );
    }

    function isSignedIn() {
      return request.auth != null;
    }

    // ======================================================
    // 2. ACCÈS PRIORITAIRE ADMIN (EXPLICITE PAR COLLECTION)
    // ======================================================
    
    match /conversations {
      allow read, write: if isMaster();
      match /{allPaths=**} {
        allow read, write: if isMaster();
      }
    }

    match /users {
      allow read, write: if isMaster();
      match /{allPaths=**} {
        allow read, write: if isMaster();
      }
    }

    match /businesses {
      allow read, write: if isMaster();
      match /{allPaths=**} {
        allow read, write: if isMaster();
      }
    }

    match /campaigns {
      allow read, write: if isMaster();
      match /{allPaths=**} {
        allow read, write: if isMaster();
      }
    }

    // ======================================================
    // 3. RÈGLES STANDARDS UTILISATEURS
    // ======================================================

    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId);
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId);
      }
    }

    match /conversations/{convId} {
      allow read, write: if isSignedIn() && (request.auth.uid == convId);
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == convId);
      }
    }

    // Accès publics et utilitaires
    match /app_settings/{id} { allow read: if true; }
    match /system_notifications/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { 
        allow get, list: if true; 
        allow create, update: if isSignedIn(); 
      }
    }
    match /sound_library/{id} { allow get, list: if true; }
    match /cms_support/faq/items/{id} { allow get, list: if true; }
    match /shared_access_tokens/{id} { allow get, list: if true; }

    match /cms_support/tickets/items/{id} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isMaster());
    }

    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isMaster());
      match /promotions/{promoId} { 
        allow get, list: if true; 
        allow write: if isSignedIn() || isMaster(); 
      }
    }

    match /spot_shares/{id} {
      allow create: if isSignedIn();
      allow read, delete: if isSignedIn() && (
        isMaster() || 
        (request.auth.token.get('email', '') != null && resource.data.recipientEmail == request.auth.token.get('email', '').lower())
      );
    }

    match /vessels/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} { allow read, write: if isSignedIn(); }
    }
    match /hunting_sessions/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} { allow read, write: if isSignedIn(); }
    }
  }
}