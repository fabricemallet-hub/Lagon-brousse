
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // SESSIONS DE CHASSE - PRIORITÉ HAUTE
    // DEPLOY_ID: FORCE_RELOAD_20240524_1310_FINAL
    // ----------------------------------------------------------------------
    match /hunting_sessions/{sessionId} {
      // Autoriser explicitement la lecture (get/list) pour tout utilisateur authentifié
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      // Protection sur la modification/suppression
      allow update, delete: if (request.auth != null && (
        request.auth.token.email == 'f.mallet81@outlook.com' || 
        request.auth.token.email == 'f.mallet81@gmail.com' ||
        resource.data.organizerId == request.auth.uid
      ));
      
      match /participants/{participantId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && (request.auth.uid == participantId || request.auth.token.email == 'f.mallet81@outlook.com' || request.auth.token.email == 'f.mallet81@gmail.com');
      }
    }

    // ----------------------------------------------------------------------
    // FONCTIONS ET RÉGLES GÉNÉRALES
    // ----------------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'f.mallet81@outlook.com' || 
        request.auth.token.email == 'f.mallet81@gmail.com'
      );
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow create: if isSignedIn();
      allow update: if isOwner(userId) || isAdmin();
      allow list, delete: if isAdmin();
      
      match /fishing_spots/{spotId} {
        allow read, write: if isOwner(userId);
      }

      match /sowings/{sowingId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /vessels/{vesselId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isOwner(vesselId) || isAdmin();

      match /history/{pointId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isOwner(vesselId) || isAdmin();
      }
    }

    match /locations/{locationId} {
      allow read: if true;
    }
    
    match /stations/{stationId} {
      allow read: if true;
      allow write: if isAdmin();
      
      match /tides/{date} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }
    
    match /access_tokens/{tokenId} {
      allow read, write: if isAdmin();
      allow get: if isSignedIn();
      allow update: if isSignedIn() && request.resource.data.status == 'redeemed';
    }
    
    match /shared_access_tokens/{tokenId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /conversations/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();

      match /messages/{messageId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }
  }
}
