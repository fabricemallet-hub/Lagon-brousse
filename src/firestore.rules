
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FONCTIONS DE BASE ---
    function isSignedIn() {
      return request.auth != null;
    }

    // Récupère le rôle de l'utilisateur depuis son document Firestore
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.uid in [
          "t8nPnZLcTiaLJSKMuLzib3C5nPn1", // Fabrice Mallet
          "koKj5ObSGXYeO1PLKU5bgo8Yaky1",
          "D1q2GPM95rZi38cvCzvsjcWQDaV2",
          "K9cVYLVUk1NV99YV3anebkugpPp1",
          "ipupi3Pg4RfrSEpFyT69BtlCdpi2",
          "Irglq69MasYdNwBmUu8yKvw6h4G2"
        ] ||
        getUserRole() == "admin" ||
        (request.auth.token.email != null && 
         request.auth.token.email.toLower() in [
           "fabrice.mallet@gmail.com",
           "f.mallet81@gmail.com",
           "f.mallet81@outlook.com",
           "kledostyle@outlook.com"
         ])
      );
    }

    function isProfessional() {
      return isSignedIn() && (getUserRole() == "professional" || isAdmin());
    }

    // --- 1. ACCÈS TOTAL ADMIN ---
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }

    // --- 2. USERS & PROFILES ---
    match /users/{userId} {
      allow read: if isSignedIn(); // Permet de voir les autres pour le calcul d'audience Pro
      allow write: if isSignedIn() && (request.auth.uid == userId);
      
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId);
      }
    }

    // --- 3. COMMERCES & PROMOTIONS ---
    match /businesses/{businessId} {
      allow get, list: if true;
      allow write: if isProfessional() && (resource == null || resource.data.ownerId == request.auth.uid);
      
      match /promotions/{promoId} {
        allow read: if true;
        allow write: if isProfessional() && get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId == request.auth.uid;
      }
    }

    // --- 4. ACCÈS PUBLICS ---
    match /app_settings/{id} { allow read: if true; }
    match /system_notifications/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { allow read, write: if isSignedIn(); }
    }
    match /sound_library/{id} { allow read: if true; }

    // --- 5. FONCTIONNALITÉS CONNECTÉES ---
    match /cms_support/faq/items/{id} { allow get, list: if true; }
    match /cms_support/tickets/items/{id} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid);
    }
    
    match /hunting_sessions/{id} { allow read, write: if isSignedIn(); match /{allPaths=**} { allow read, write: if isSignedIn(); } }
    match /vessels/{id} { allow read, write: if isSignedIn(); match /{allPaths=**} { allow read, write: if isSignedIn(); } }
    match /spot_shares/{id} { allow read, write: if isSignedIn(); }
    match /campaigns/{campaignId} { 
      allow create: if isProfessional();
      allow read: if isProfessional() && resource.data.ownerId == request.auth.uid;
    }

    match /conversations/{convId} {
      allow read, write: if isSignedIn() && (request.auth.uid == convId);
      match /messages/{msgId} {
        allow read, write: if isSignedIn() && (request.auth.uid == convId);
      }
    }
    
    match /access_tokens/{tokenId} {
      allow read: if true;
    }
    
    match /shared_access_tokens/{tokenId} {
      allow read: if true;
    }
  }
}
