rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // 1. MASTER ADMIN BYPASS (PRIORITÉ ABSOLUE)
    // ======================================================
    
    function isMaster() {
      return request.auth != null && (
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" ||
        request.auth.token.email.lower() == "f.mallet81@outlook.com" ||
        request.auth.token.email.lower() == "fabrice.mallet@gmail.com" ||
        request.auth.token.email.lower() == "f.mallet81@gmail.com"
      );
    }

    // Autorisation de listage explicite pour les collections d'administration
    match /conversations { allow list: if isMaster(); }
    match /users { allow list: if isMaster(); }
    match /businesses { allow list: if isMaster(); }
    match /campaigns { allow list: if isMaster(); }
    match /system_notifications { allow list: if isMaster(); }
    match /sound_library { allow list: if isMaster(); }

    // Bypass universel récursif pour le Master Admin
    match /{allPaths=**} {
      allow read, write: if isMaster();
    }

    // ======================================================
    // 2. RÈGLES SPÉCIFIQUES (USAGERS & PUBLICS)
    // ======================================================

    match /system_notifications/{id} {
      allow read: if true;
    }

    match /sound_library/{id} {
      allow read: if true;
    }

    match /app_settings/{id} {
      allow read: if true;
    }

    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }

    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { 
        allow get, list: if true; 
        allow create, update: if request.auth != null; 
      }
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /conversations/{convId} {
      allow read, write: if request.auth != null && request.auth.uid == convId;
      match /{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == convId;
      }
    }

    match /vessels/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }

    match /hunting_sessions/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }
  }
}