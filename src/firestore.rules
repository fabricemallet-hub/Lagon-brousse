rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // 1. RÈGLE ALPHA - ACCÈS TOTAL MASTER (f.mallet81@outlook.com)
    // ======================================================
    // Cette règle est prioritiaire et inconditionnelle.
    
    match /{document=**} {
      allow read, write: if request.auth != null && (
        request.auth.token.email == "f.mallet81@outlook.com" || 
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1"
      );
    }

    // Autorisations explicites pour le listage des collections Admin
    match /conversations { allow list: if request.auth != null && (request.auth.token.email == "f.mallet81@outlook.com" || request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1"); }
    match /users { allow list: if request.auth != null && (request.auth.token.email == "f.mallet81@outlook.com" || request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1"); }
    match /businesses { allow list: if request.auth != null && (request.auth.token.email == "f.mallet81@outlook.com" || request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1"); }
    match /campaigns { allow list: if request.auth != null && (request.auth.token.email == "f.mallet81@outlook.com" || request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1"); }

    // ======================================================
    // 2. RÈGLES STANDARDS (Pour les autres utilisateurs)
    // ======================================================

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{allPaths=**} { allow read, write: if request.auth != null && request.auth.uid == userId; }
    }

    match /conversations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{allPaths=**} { allow read, write: if request.auth != null && request.auth.uid == userId; }
    }

    // Accès Publics
    match /app_settings/{id} { allow read: if true; }
    match /system_notifications/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { 
        allow get, list: if true; 
        allow create, update: if request.auth != null; 
      }
    }
    match /sound_library/{id} { allow get, list: if true; }
    match /cms_support/faq/items/{id} { allow get, list: if true; }
    match /shared_access_tokens/{id} { allow get, list: if true; }

    // Support (Tickets)
    match /cms_support/tickets/items/{id} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Business & Commerces
    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
      match /promotions/{promoId} { 
        allow get, list: if true; 
        allow write: if request.auth != null; 
      }
    }

    match /campaigns/{campaignId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }
    
    match /spot_shares/{id} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null && (request.auth.token.email != null && resource.data.recipientEmail == request.auth.token.email.lower());
    }
  }
}