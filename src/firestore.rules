rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. BYPASS MASTER ABSOLU (PRIORITÉ 1) ---
    // Votre compte a un accès total et inconditionnel à TOUS les documents.
    match /{allPaths=**} {
      allow read, write: if request.auth != null && (
        request.auth.uid in [
          "D1q2GPM95rZi38cvCzvsjcWQDaV2",
          "t8nPnZLcTiaLJSKMuLzib3C5nPn1", 
          "K9cVYLVUk1NV99YV3anebkugpPp1", 
          "ipupi3Pg4RfrSEpFyT69BtlCdpi2", 
          "Irglq69MasYdNwBmUu8yKvw6h4G2"
        ] ||
        (request.auth.token.email != null && 
         request.auth.token.email.lower() in [
           "f.mallet81@outlook.com",
           "fabrice.mallet@gmail.com",
           "f.mallet81@gmail.com"
         ]
        )
      );
    }

    // --- 2. ACCÈS CATALOGUE GLOBAL (SHOPPING) ---
    // Autorise la lecture de toutes les promotions pour le collectionGroup.
    match /{path=**}/promotions/{promoId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // --- 3. ACCÈS PUBLICS ---
    match /app_settings/{id} {
      allow read: if true;
    }

    match /system_notifications/{id} {
      allow read: if true;
    }

    match /meteo_caledonie/{id} {
      allow get, list: if true;
      match /previsions/{prevId} {
        allow get, list: if true;
      }
    }

    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} {
        allow get, list: if true;
        allow create, update: if request.auth != null;
      }
    }

    match /sound_library/{id} {
      allow read: if true;
    }

    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // --- 4. DONNÉES PRIVÉES ---
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /conversations/{id} {
      allow read, write: if request.auth != null && request.auth.uid == id;
      match /{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == id;
      }
    }

    match /spot_shares/{id} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null;
    }

    match /vessels/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }

    match /hunting_sessions/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }

    match /campaigns/{campaignId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
    }
  }
}