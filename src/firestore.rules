
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // 1. FONCTIONS DE BASE
    // ======================================================
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isMasterAdmin() {
      return isSignedIn() && (
        request.auth.uid in ["t8nPnZLcTiaLJSKMuLzib3C5nPn1", "D1q2GPM95rZi38cvCzvsjcWQDaV2", "koKj5ObSGXYeO1PLKU5bgo8Yaky1"] ||
        (request.auth.token.email != null && 
         request.auth.token.email.lower() in [
          "f.mallet81@outlook.com",
          "f.mallet81@gmail.com",
          "fabrice.mallet@gmail.com",
          "kledostyle@outlook.com",
          "kledostyle@hotmail.com"
        ])
      );
    }

    // ======================================================
    // 2. JETONS & ACCÈS PUBLICS (PRIORITAIRE)
    // ======================================================
    
    // Autoriser la vérification des jetons pour tout le monde
    match /access_tokens/{token} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Données publiques (Météo, Poissons, Réglages, Notifications)
    match /app_settings/{document=**} { allow read: if true; }
    match /system_notifications/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { 
      allow read: if true;
      match /previsions/{prevId} { allow read: if true; }
    }
    match /fish_species/{id} { allow read: if true; }
    match /sound_library/{id} { allow read: if true; }
    match /businesses/{id} { allow read: if true; }
    match /shared_access_tokens/{id} { allow read: if true; }
    match /{path=**}/promotions/{promoId} { allow read: if true; }

    // ======================================================
    // 3. BYPASS MASTER ADMIN (TOTAL)
    // ======================================================
    
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }

    // ======================================================
    // 4. RÈGLES SIMPLIFIÉES POUR LE DÉVELOPPEMENT
    // ======================================================

    // Profils Utilisateurs
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (request.auth.uid == userId);
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId);
      }
    }

    // Sessions, Spots, Conversations, etc.
    // On autorise la lecture/écriture si connecté pour ne pas bloquer les tests
    match /hunting_sessions/{id} { allow read, write: if isSignedIn(); }
    match /vessel_sessions/{id} { allow read, write: if isSignedIn(); }
    match /vessels/{id} { allow read, write: if isSignedIn(); }
    match /spot_shares/{id} { allow read, write: if isSignedIn(); }
    match /cms_support/tickets/items/{id} { allow read, write: if isSignedIn(); }
    match /conversations/{id} { allow read, write: if isSignedIn(); }
    match /campaigns/{id} { allow read, write: if isSignedIn(); }
    
    // Requêtes de groupe (collectionGroup)
    match /{path=**}/fishing_spots/{spotId} { allow read, write: if isSignedIn(); }
    match /{path=**}/commune_stats/{id} { allow read, write: if isSignedIn(); }
    match /{path=**}/messages/{id} { allow read, write: if isSignedIn(); }
    match /{path=**}/vessels_safety/{id} { allow read, write: if isSignedIn(); }
    match /{path=**}/weapons/{id} { allow read, write: if isSignedIn(); }
    match /{path=**}/sowings/{id} { allow read, write: if isSignedIn(); }
    match /{path=**}/garden_plants/{id} { allow read, write: if isSignedIn(); }
  }
}
