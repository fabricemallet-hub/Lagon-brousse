rules_version = '2';

// Version 7.0.0 - ACCÈS MAÎTRE ABSOLU ET PRIORITAIRE
service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. PRIORITÉ SUPRÊME : VOTRE UID MAÎTRE ---
    // Cette règle autorise TOUTES les opérations sur TOUS les chemins.
    // On utilise l'UID en dur pour une évaluation instantanée et sans faille.
    match /{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1";
    }

    // --- 2. LISTAGE EXPLICITE DES COLLECTIONS RACINE ---
    // Indispensable pour le fonctionnement du Dashboard Admin.
    match /conversations { allow list: if request.auth != null && request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1"; }
    match /users { allow list: if request.auth != null && request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1"; }
    match /businesses { allow list: if request.auth != null && request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1"; }
    match /access_tokens { allow list: if request.auth != null && request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1"; }
    match /campaigns { allow list: if request.auth != null && request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1"; }
    match /system_notifications { allow list: if request.auth != null && request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1"; }

    // --- 3. FONCTION DE DÉTECTION POUR LES AUTRES ADMINS ---
    function isSecondaryAdmin() {
      return request.auth != null && (
        request.auth.uid in ["K9cVYLVUk1NV99YV3anebkugpPp1", "ipupi3Pg4RfrSEpFyT69BtlCdpi2", "Irglq69MasYdNwBmUu8yKvw6h4G2"] ||
        (request.auth.token.email != null && request.auth.token.email.lower() in [
          "f.mallet81@outlook.com", 
          "fabrice.mallet@gmail.com", 
          "f.mallet81@gmail.com"
        ])
      );
    }

    // --- 4. RÈGLES STANDARDS POUR LES UTILISATEURS ---
    
    match /conversations/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isSecondaryAdmin());
      match /{allPaths=**} {
        allow read, write: if request.auth != null && (request.auth.uid == userId || isSecondaryAdmin());
      }
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isSecondaryAdmin());
      match /{allPaths=**} {
        allow read, write: if request.auth != null && (request.auth.uid == userId || isSecondaryAdmin());
      }
    }

    match /app_settings/{id} {
      allow read: if true;
      allow write: if isSecondaryAdmin();
    }

    match /system_notifications/{id} {
      allow read: if true;
      allow write: if isSecondaryAdmin();
    }

    match /meteo_caledonie/{id} {
      allow get, list: if true;
      match /previsions/{prevId} {
        allow get, list: if true;
      }
      allow write: if isSecondaryAdmin();
    }

    match /fish_species/{id} {
      allow get, list: if true;
      allow write: if isSecondaryAdmin();
      match /commune_stats/{communeId} {
        allow get, list: if true;
        allow create, update: if request.auth != null;
      }
    }
    
    match /sound_library/{id} {
      allow get, list: if true;
      allow write: if isSecondaryAdmin();
    }

    match /cms_support/faq/items/{id} {
      allow get, list: if true;
      allow write: if isSecondaryAdmin();
    }

    match /cms_support/tickets/items/{id} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isSecondaryAdmin());
      allow list, update, delete: if isSecondaryAdmin();
    }

    match /hunting_sessions/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} {
        allow read, write: if request.auth != null;
      }
    }

    match /vessels/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} {
        allow read, write: if request.auth != null;
      }
    }

    match /spot_shares/{id} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null && (
        isSecondaryAdmin() || 
        (request.auth.token.email != null && resource.data.recipientEmail == request.auth.token.email.lower())
      );
    }

    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.ownerId == request.auth.uid || isSecondaryAdmin());

      match /promotions/{promoId} {
        allow get, list: if true;
        allow write: if request.auth != null;
      }
    }

    match /campaigns/{campaignId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.ownerId == request.auth.uid || isSecondaryAdmin());
    }
  }
}
