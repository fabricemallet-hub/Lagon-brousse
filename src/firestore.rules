rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. AUTORITÉ MAÎTRE ABSOLUE (Email-First) ---
    // Cette règle est prioritaire et inconditionnelle pour votre compte.
    match /{allPaths=**} {
      allow read, write: if request.auth != null && (
        request.auth.token.email.lower() == "f.mallet81@outlook.com" ||
        request.auth.token.email.lower() == "fabrice.mallet@gmail.com" ||
        request.auth.token.email.lower() == "f.mallet81@gmail.com"
      );
    }

    // --- 2. ACCÈS EXPLICITES POUR LE DASHBOARD ADMIN ---
    // Firestore nécessite parfois un match explicite sur la collection pour le listage.
    match /conversations/{id} { allow list: if request.auth != null && request.auth.token.email.lower() == "f.mallet81@outlook.com"; }
    match /users/{id} { allow list: if request.auth != null && request.auth.token.email.lower() == "f.mallet81@outlook.com"; }
    match /businesses/{id} { allow list: if request.auth != null && request.auth.token.email.lower() == "f.mallet81@outlook.com"; }
    match /campaigns/{id} { allow list: if request.auth != null && request.auth.token.email.lower() == "f.mallet81@outlook.com"; }

    // --- 3. RÈGLES STANDARDS POUR LES UTILISATEURS ---
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{allPaths=**} { allow read, write: if request.auth != null && request.auth.uid == userId; }
    }

    match /conversations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{allPaths=**} { allow read, write: if request.auth != null && request.auth.uid == userId; }
    }

    // Accès Publics (Lecture seule)
    match /app_settings/{id} { allow read: if true; }
    match /system_notifications/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { 
        allow get, list: if true; 
        allow create, update: if request.auth != null; 
      }
    }
    match /sound_library/{id} { allow get, list: if true; }
    match /cms_support/faq/items/{id} { allow get, list: if true; }
    match /shared_access_tokens/{id} { allow get, list: if true; }

    // Support (Tickets)
    match /cms_support/tickets/items/{id} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || request.auth.token.email.lower() == "f.mallet81@outlook.com");
    }

    // Sessions temps réel (GPS)
    match /hunting_sessions/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }
    
    match /vessels/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }

    // Business & Commerces
    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.ownerId == request.auth.uid || request.auth.token.email.lower() == "f.mallet81@outlook.com");
      match /promotions/{promoId} { 
        allow get, list: if true; 
        allow write: if request.auth != null; 
      }
    }

    match /campaigns/{campaignId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.ownerId == request.auth.uid || request.auth.token.email.lower() == "f.mallet81@outlook.com");
    }
    
    match /spot_shares/{id} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null && (request.auth.token.email != null && resource.data.recipientEmail == request.auth.token.email.lower());
    }
  }
}