rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // 1. FONCTIONS DE SÉCURITÉ ET ACCÈS MASTER
    // ======================================================
    
    function isMaster() {
      return request.auth != null && (
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" ||
        request.auth.uid == "K9cVYLVUk1NV99YV3anebkugpPp1" ||
        request.auth.token.get('email', '').lower() == "f.mallet81@outlook.com" ||
        request.auth.token.get('email', '').lower() == "fabrice.mallet@gmail.com" ||
        request.auth.token.get('email', '').lower() == "f.mallet81@gmail.com"
      );
    }

    // BYPASS UNIVERSEL : Autorisation absolue pour les administrateurs maîtres
    match /{allPaths=**} {
      allow read, write: if isMaster();
    }

    // ======================================================
    // 2. RÈGLES SPÉCIFIQUES AUX COLLECTIONS ADMIN
    // ======================================================

    match /system_notifications/{id} {
      allow read: if true;
      allow write: if isMaster();
    }

    match /sound_library/{id} {
      allow read: if true;
      allow write: if isMaster();
    }

    match /app_settings/{id} {
      allow read: if true;
      allow write: if isMaster();
    }

    match /conversations/{id} {
      allow read, write: if isMaster();
      match /{allPaths=**} { allow read, write: if isMaster(); }
    }

    match /campaigns/{id} {
      allow read, write: if isMaster();
    }

    // ======================================================
    // 3. RÈGLES USAGERS ET LOGIQUE MÉTIER
    // ======================================================

    match /meteo_caledonie/{id} {
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }

    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} {
        allow get, list: if true;
        allow create, update: if request.auth != null;
      }
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /vessels/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }

    match /hunting_sessions/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }

    match /spot_shares/{id} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null && 
        request.auth.token.get('email', '').lower() == resource.data.recipientEmail.lower();
    }
  }
}