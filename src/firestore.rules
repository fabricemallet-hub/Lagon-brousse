
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // 1. PRIORITÉ ABSOLUE : MASTER ADMIN (GOD MODE)
    // ======================================================
    match /{allPaths=**} {
      allow read, write: if request.auth != null && (
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" ||
        (request.auth.token.email != null && (
          request.auth.token.email.lower() == "f.mallet81@outlook.com" ||
          request.auth.token.email.lower() == "f.mallet81@gmail.com"
        ))
      );
    }

    // ======================================================
    // 2. FONCTIONS DE SÉCURITÉ
    // ======================================================
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" ||
        (request.auth.token.email != null && request.auth.token.email.lower() == "f.mallet81@outlook.com") ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin")
      );
    }

    function isProfessional() {
      return isSignedIn() && (
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "professional") || 
        isAdmin()
      );
    }

    // ======================================================
    // 3. RÈGLES PAR COLLECTION
    // ======================================================

    // Catalogue Shopping
    match /{path=**}/promotions/{promoId} {
      allow read: if true;
      allow write: if isProfessional();
    }

    // Profils Utilisateurs & Sécurité Navires
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      
      match /vessels_safety/{vesselId} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
      match /sowings/{sowingId} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
      match /garden_plants/{plantId} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
      match /weapons/{weaponId} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
      match /fishing_spots/{spotId} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    // Commerces
    match /businesses/{businessId} {
      allow get, list: if true;
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || (isSignedIn() && resource.data.ownerId == request.auth.uid);
    }

    // Boat Tracker (GPS Sharing)
    match /vessels/{vesselId} {
      allow read, write: if isSignedIn();
    }

    // Sessions de Groupe (Chasse & Pêche)
    match /hunting_sessions/{sessionId} {
      allow read, create, update: if isSignedIn();
      allow delete: if isSignedIn() && (resource.data.organizerId == request.auth.uid || isAdmin());

      match /participants/{participantId} {
        allow read, write: if isSignedIn();
      }
    }

    // Données Publiques
    match /app_settings/{id} { allow read: if true; }
    match /system_notifications/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { allow read, write: if isSignedIn(); }
    }
    match /sound_library/{id} { allow read: if true; }

    // Messagerie
    match /conversations/{convId} {
      allow read, write: if isSignedIn() && (request.auth.uid == convId || isAdmin());
      match /messages/{msgId} {
        allow read, write: if isSignedIn() && (request.auth.uid == convId || isAdmin());
      }
    }
    
    match /cms_support/tickets/items/{id} {
      allow create: if isSignedIn();
      allow read, write: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Accès
    match /access_tokens/{id} { allow read, write: if isAdmin(); }
    match /shared_access_tokens/{id} { allow read, write: if isAdmin(); }
    
    match /spot_shares/{id} { allow read, write: if isSignedIn(); }
    match /campaigns/{campaignId} { allow read, write: if isProfessional() || isAdmin(); }
  }
}
