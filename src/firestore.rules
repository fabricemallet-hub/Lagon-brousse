
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FONCTIONS DE BASE ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        // Accès par UID maître
        request.auth.uid in ["K9cVYLVUk1NV99YV3anebkugpPp1", "ipupi3Pg4RfrSEpFyT69BtlCdpi2", "Irglq69MasYdNwBmUu8yKvw6h4G2"] ||
        // Accès par email maître
        request.auth.token.email.lower() in ["f.mallet81@outlook.com", "fabrice.mallet@gmail.com", "f.mallet81@gmail.com"] ||
        // Accès par statut dans le document utilisateur (dynamique)
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionStatus == 'admin'
      );
    }

    function isPro() {
      return isSignedIn() && (
        isAdmin() || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionStatus == 'professional' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'professional'
      );
    }

    // --- 0. ACCÈS PUBLICS ---
    match /app_settings/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /system_notifications/{id} {
      allow read: if true;
    }

    match /meteo_caledonie/{id} {
      allow get, list: if true;
      match /previsions/{prevId} {
        allow get, list: if true;
      }
      allow write: if isAdmin();
    }

    match /fish_species/{id} {
      allow get, list: if true;
      allow write: if isAdmin();
      
      match /commune_stats/{communeId} {
        allow get, list: if true;
        allow create, update: if isSignedIn();
      }
    }
    
    match /sound_library/{id} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // --- 1. CMS SUPPORT & FAQ ---
    match /cms_support/faq/items/{id} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /cms_support/tickets/items/{id} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow list: if isAdmin();
      allow update, delete: if isAdmin();
    }

    // --- 2. UTILISATEURS & DONNÉES PERSO ---
    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    // --- 3. FONCTIONNALITÉS TEMPS RÉEL ---
    match /hunting_sessions/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /vessels/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /access_tokens/{id} {
      allow read, write: if isSignedIn() || isAdmin();
    }

    match /shared_access_tokens/{id} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // --- 4. PARTAGE DE SPOTS ---
    match /spot_shares/{id} {
      allow create: if isSignedIn();
      allow read, delete: if isSignedIn() && (
        isAdmin() || 
        (request.auth.token.email != null && resource.data.recipientEmail == request.auth.token.email.lower())
      );
    }

    // --- 5. COMMERCES & BUSINESS ---
    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if isPro();
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin());

      match /promotions/{promoId} {
        allow get, list: if true;
        allow write: if isPro();
      }
    }

    match /campaigns/{campaignId} {
      allow create: if isPro();
      allow read: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin());
    }
  }
}
