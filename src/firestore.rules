rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // 1. DROITS MASTER ADMIN (FLAT & EXPLICIT)
    // ======================================================
    // Accès total sans fonctions pour éviter les erreurs d'évaluation.
    
    match /{allPaths=**} {
      allow read, write: if request.auth != null && (
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" ||
        request.auth.uid == "koKj5ObSGXYeO1PLKU5bgo8Yaky1" ||
        request.auth.uid == "D1q2GPM95rZi38cvCzvsjcWQDaV2" ||
        request.auth.uid == "K9cVYLVUk1NV99YV3anebkugpPp1" ||
        request.auth.uid == "ipupi3Pg4RfrSEpFyT69BtlCdpi2" ||
        request.auth.uid == "Irglq69MasYdNwBmUu8yKvw6h4G2" ||
        (request.auth.token.email != null && request.auth.token.email.lower() in [
          "f.mallet81@outlook.com",
          "fabrice.mallet@gmail.com",
          "f.mallet81@gmail.com",
          "kledostyle@outlook.com"
        ])
      );
    }

    // --- ACCÈS SYSTÈME SPÉCIFIQUES (REMAILLAGE DE SÉCURITÉ) ---
    
    match /shared_access_tokens/{id} {
      allow read: if true;
      allow write: if request.auth != null && (request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" || request.auth.token.email.lower() == "f.mallet81@outlook.com");
    }

    match /access_tokens/{id} {
      allow read: if true;
      allow write: if request.auth != null && (request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" || request.auth.token.email.lower() == "f.mallet81@outlook.com");
    }

    match /app_settings/{id} {
      allow read: if true;
      allow write: if request.auth != null && (request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" || request.auth.token.email.lower() == "f.mallet81@outlook.com");
    }

    // ======================================================
    // 2. RÈGLES STANDARDS
    // ======================================================

    function isSignedIn() {
      return request.auth != null;
    }

    match /users {
      allow list: if isSignedIn();
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId);
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId);
      }
    }

    match /system_notifications/{id} { allow read: if true; }
    match /sound_library/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { allow read, write: if isSignedIn(); }
    }

    match /{path=**}/promotions/{promoId} {
      allow read: if true;
    }

    match /cms_support/{allPaths=**} { 
      allow read, write: if isSignedIn() && (request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" || request.auth.token.get('role', '') == 'admin'); 
    }
    
    match /hunting_sessions/{id} { allow read, write: if isSignedIn(); match /{allPaths=**} { allow read, write: if isSignedIn(); } }
    match /vessels/{id} { allow read, write: if isSignedIn(); match /{allPaths=**} { allow read, write: if isSignedIn(); } }
    match /spot_shares/{id} { allow read, write: if isSignedIn(); }
    match /businesses/{businessId} { allow get, list: if true; }
    match /campaigns/{campaignId} { allow read, write: if isSignedIn() && (request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" || request.auth.token.get('role', '') == 'admin'); }
    
    match /conversations/{id} {
      allow read, write: if isSignedIn() && (request.auth.uid == id);
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == id);
      }
    }
  }
}