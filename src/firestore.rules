rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // 1. RÈGLE ALPHA - ACCÈS TOTAL ET PRIORITAIRE MASTER
    // ======================================================
    
    function isMaster() {
      return request.auth != null && (
        request.auth.token.email.lower() == "f.mallet81@outlook.com" || 
        request.auth.token.email.lower() == "fabrice.mallet@gmail.com" || 
        request.auth.token.email.lower() == "f.mallet81@gmail.com" ||
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1"
      );
    }

    // ACCÈS UNIVERSEL POUR LE MASTER (Court-circuite tout le reste)
    match /{allPaths=**} {
      allow read, write: if isMaster();
    }

    // ======================================================
    // 2. AUTORISATIONS DE LISTAGE EXPLICITES (Pour le Dashboard)
    // ======================================================
    
    match /conversations { allow list: if isMaster(); }
    match /users { allow list: if isMaster(); }
    match /businesses { allow list: if isMaster(); }
    match /campaigns { allow list: if isMaster(); }

    // ======================================================
    // 3. RÈGLES STANDARDS (Pour les autres utilisateurs)
    // ======================================================

    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{uid} {
      allow read, write: if isSignedIn() && (request.auth.uid == uid || isMaster());
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == uid || isMaster());
      }
    }

    match /conversations/{convId} {
      allow read, write: if isSignedIn() && (request.auth.uid == convId || isMaster());
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == convId || isMaster());
      }
    }

    // Accès Publics
    match /app_settings/{id} { allow read: if true; }
    match /system_notifications/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { 
        allow get, list: if true; 
        allow create, update: if isSignedIn(); 
      }
    }
    match /sound_library/{id} { allow get, list: if true; }
    match /cms_support/faq/items/{id} { allow get, list: if true; }
    match /shared_access_tokens/{id} { allow get, list: if true; }

    // Support (Tickets)
    match /cms_support/tickets/items/{id} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isMaster());
    }

    // Business & Commerces
    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isMaster());
      match /promotions/{promoId} { 
        allow get, list: if true; 
        allow write: if isSignedIn(); 
      }
    }

    match /campaigns/{campaignId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isMaster());
    }
    
    match /spot_shares/{id} {
      allow create: if isSignedIn();
      allow read, delete: if isSignedIn() && (
        isMaster() || 
        (request.auth.token.email != null && resource.data.recipientEmail == request.auth.token.email.lower())
      );
    }

    // Boat Tracker & Sessions
    match /vessels/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} { allow read, write: if isSignedIn(); }
    }
    match /hunting_sessions/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} { allow read, write: if isSignedIn(); }
    }
  }
}