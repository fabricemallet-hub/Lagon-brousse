rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FONCTIONS DE SÉCURITÉ ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.uid in [
          "D1q2GPM95rZi38cvCzvsjcWQDaV2",
          "t8nPnZLcTiaLJSKMuLzib3C5nPn1", 
          "K9cVYLVUk1NV99YV3anebkugpPp1", 
          "ipupi3Pg4RfrSEpFyT69BtlCdpi2", 
          "Irglq69MasYdNwBmUu8yKvw6h4G2",
          "koKj50bSGXYeO1PLKU5bgo8Yaky1" // UID kledostyle ajouté en Master Admin
        ] ||
        (request.auth.token.email != null && 
         request.auth.token.email.lower() in [
           "f.mallet81@outlook.com",
           "fabrice.mallet@gmail.com",
           "f.mallet81@gmail.com"
         ]
        ) ||
        request.auth.token.role == 'admin'
      );
    }

    function isProfessional() {
      return isSignedIn() && (
        request.auth.token.role == 'professional' || 
        isAdmin()
      );
    }

    // --- 1. ACCÈS TOTAL MASTER (BYPASS TOUT) ---
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }

    // --- 2. ACCÈS PUBLIC SHOPPING (Collection Group) ---
    match /{path=**}/promotions/{promoId} {
      allow get, list: if true;
      allow write: if isSignedIn();
    }

    // --- 3. ACCÈS PUBLICS STANDARDS ---
    match /app_settings/{id} {
      allow read: if true;
    }

    match /system_notifications/{id} {
      allow read: if true;
    }

    match /meteo_caledonie/{id} {
      allow get, list: if true;
      match /previsions/{prevId} {
        allow get, list: if true;
      }
    }

    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} {
        allow get, list: if true;
        allow create, update: if isSignedIn();
      }
    }

    match /fish_species/{fishId}/commune_stats/{communeId} {
      allow read: if true;
      allow create, update: if isSignedIn();
    }

    match /sound_library/{id} {
      allow read: if true;
    }

    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin());
    }

    // --- 4. DONNÉES PRIVÉES & PROFILS ---
    match /users/{userId} {
      // Autoriser le comptage (list) pour le calcul du Reach
      allow list: if isSignedIn();
      allow get, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    match /conversations/{id} {
      allow read, write: if isSignedIn() && (request.auth.uid == id || isAdmin());
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == id || isAdmin());
      }
    }

    match /spot_shares/{id} {
      allow create: if isSignedIn();
      allow read, delete: if isSignedIn();
    }

    match /vessels/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} { allow read, write: if isSignedIn(); }
    }

    match /hunting_sessions/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} { allow read, write: if isSignedIn(); }
    }

    match /campaigns/{campaignId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin());
    }
  }
}