
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth.token.email == 'f.mallet81@outlook.com';
    }

    // ----------------------------------------------------------------------
    // Collection: users
    // ----------------------------------------------------------------------
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();
      
      match /fishing_spots/{spotId} {
        allow read, write, delete: if isOwner(userId);
      }

      match /sowings/{sowingId} {
        allow read, write, delete: if isOwner(userId);
      }
    }

    // ----------------------------------------------------------------------
    // Collection: vessels (Real-time tracking)
    // ----------------------------------------------------------------------
    match /vessels/{userId} {
      // Owner can fully manage their own vessel status
      allow read: if isSignedIn();
      allow create, update, delete: if isOwner(userId);

      match /history/{pointId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isOwner(userId);
      }
    }

    // ----------------------------------------------------------------------
    // Collection: locations
    // ----------------------------------------------------------------------
    match /locations/{locationId} {
      allow read: if true;
      allow write: if false;
    }
    
    // ----------------------------------------------------------------------
    // Collection: stations & subcollections
    // ----------------------------------------------------------------------
    match /stations/{stationId} {
      allow read: if true;
      allow write: if isAdmin();
      
      match /tides/{date} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }
    
    // ----------------------------------------------------------------------
    // Collection: hunting_sessions
    // ----------------------------------------------------------------------
    match /hunting_sessions/{sessionId} {
      allow get: if isSignedIn();
      allow create: if isOwner(request.resource.data.organizerId);
      allow delete: if isOwner(resource.data.organizerId);
      
      match /participants/{userId} {
        allow create, update, delete: if isOwner(userId);
        allow get: if isSignedIn();
        allow list: if exists(/databases/$(database)/documents/hunting_sessions/$(sessionId)/participants/$(request.auth.uid));
      }
    }

    // ----------------------------------------------------------------------
    // Collection: access_tokens
    // ----------------------------------------------------------------------
    match /access_tokens/{tokenId} {
      allow read, write: if isAdmin();
      allow get: if isSignedIn();
      
      function isRedeemingOwnToken() {
        let isBecomingRedeemed = request.resource.data.status == 'redeemed';
        let wasActive = resource.data.status == 'active';
        let isRedeemer = request.resource.data.redeemedBy == request.auth.uid;
        return isBecomingRedeemed && wasActive && isRedeemer;
      }
      allow update: if isRedeemingOwnToken();
    }
    
    // ----------------------------------------------------------------------
    // Collection: shared_access_tokens
    // ----------------------------------------------------------------------
    match /shared_access_tokens/{tokenId} {
      allow write: if isAdmin();
      allow read: if isSignedIn();
    }

    // ----------------------------------------------------------------------
    // Collection: conversations
    // ----------------------------------------------------------------------
    match /conversations/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();

      match /messages/{messageId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }
  }
}
