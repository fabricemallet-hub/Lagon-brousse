rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // 1. ACCÈS PRIORITAIRE MAÎTRE (UID FIXE)
    // ======================================================
    // Ces identifiants ont un accès total et immédiat.
    
    function isMaster() {
      return request.auth != null && request.auth.uid in [
        "t8nPnZLcTiaLJSKMuLzib3C5nPn1",
        "K9cVYLVUk1NV99YV3anebkugpPp1",
        "ipupi3Pg4RfrSEpFyT69BtlCdpi2",
        "Irglq69MasYdNwBmUu8yKvw6h4G2"
      ];
    }

    match /{allPaths=**} {
      allow read, write: if isMaster();
    }

    // Autorisations de listage explicites pour les collections racine (Nécessaire pour le Dashboard Admin)
    match /conversations { allow list: if isMaster(); }
    match /users { allow list: if isMaster(); }
    match /businesses { allow list: if isMaster(); }
    match /access_tokens { allow list: if isMaster(); }
    match /campaigns { allow list: if isMaster(); }
    match /cms_support/tickets/items { allow list: if isMaster(); }

    // ======================================================
    // 2. ACCÈS PUBLICS & SERVICES
    // ======================================================
    match /app_settings/{id} { allow read: if true; }
    match /system_notifications/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { 
        allow get, list: if true; 
        allow create, update: if request.auth != null; 
      }
    }
    match /sound_library/{id} { allow get, list: if true; }
    match /cms_support/faq/items/{id} { allow get, list: if true; }
    match /shared_access_tokens/{id} { allow get, list: if true; }

    // ======================================================
    // 3. RÈGLES UTILISATEURS STANDARDS
    // ======================================================
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{allPaths=**} { allow read, write: if request.auth != null && request.auth.uid == userId; }
    }

    match /conversations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{allPaths=**} { allow read, write: if request.auth != null && request.auth.uid == userId; }
    }

    match /cms_support/tickets/items/{id} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    match /hunting_sessions/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }

    match /vessels/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }

    match /spot_shares/{id} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null && (
        request.auth.token.email != null && resource.data.recipientEmail == request.auth.token.email.lower()
      );
    }

    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
      match /promotions/{promoId} { allow get, list: if true; allow write: if request.auth != null; }
    }

    match /campaigns/{campaignId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }
  }
}