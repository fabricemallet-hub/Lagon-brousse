
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // 1. FONCTIONS DE SÉCURITÉ
    // ======================================================
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isMasterAdmin() {
      return isSignedIn() && (
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" ||
        (request.auth.token.email != null && 
         request.auth.token.email.lower() == "f.mallet81@outlook.com")
      );
    }

    function isBusinessOwner(busId) {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return isSignedIn() && userDoc != null && userDoc.data.get('businessId', '') == busId;
    }

    // ======================================================
    // 2. RÈGLES DE GROUPE (Indépendantes de la hiérarchie)
    // ======================================================
    
    // Indispensable pour collectionGroup("promotions") sur la page Shopping
    match /{prefix=**}/promotions/{promoId} {
      allow read: if true;
    }

    match /{prefix=**}/fishing_spots/{spotId} {
      allow read: if isSignedIn();
    }

    // ======================================================
    // 3. ACCÈS PRIORITAIRE ADMIN
    // ======================================================

    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }

    // ======================================================
    // 4. COMMERCES & PROMOTIONS
    // ======================================================

    match /businesses/{businessId} {
      allow read: if true; 

      match /promotions/{promoId} {
        allow read: if true; 
        allow write: if isMasterAdmin() || isBusinessOwner(businessId);
      }
    }

    // ======================================================
    // 5. CAMPAGNES
    // ======================================================
    
    match /campaigns/{campaignId} {
      // Permission explicite list pour éviter les erreurs de permission lors des requêtes query()
      allow get, list: if isSignedIn();
      allow write: if isSignedIn();
    }

    // ======================================================
    // 6. UTILISATEURS & PROFILS
    // ======================================================

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (request.auth.uid == userId);
      
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId);
      }
    }

    // ======================================================
    // 7. MESSAGERIE & DONNÉES SYSTÈME
    // ======================================================

    match /conversations/{convId} {
      allow read, write: if isSignedIn() && (request.auth.uid == convId || isMasterAdmin());
      match /messages/{msgId} { allow read, write: if isSignedIn(); }
    }

    match /app_settings/{document=**} { allow read: if true; }
    match /system_notifications/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { allow read: if true; }
    match /fish_species/{id} { allow read: if true; }
    match /sound_library/{id} { allow read: if true; }

    // ======================================================
    // 8. AUTRES COLLECTIONS
    // ======================================================

    match /hunting_sessions/{sessionId} { allow read, write: if isSignedIn(); }
    match /vessel_sessions/{sessionId} { allow read, write: if isSignedIn(); }
    match /vessels/{vesselId} { allow read, write: if isSignedIn(); }
    match /access_tokens/{id} { allow read: if isSignedIn(); }
    match /shared_access_tokens/{id} { allow read: if true; }
    match /spot_shares/{id} { allow read, write: if isSignedIn(); }
    
    match /cms_support/tickets/items/{id} {
      allow create: if isSignedIn();
      allow read, write: if isSignedIn() && (resource.data.userId == request.auth.uid || isMasterAdmin());
    }

  } // Fin documents
} // Fin service
