
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // 1. FONCTIONS DE SÉCURITÉ
    // ======================================================
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isMasterAdmin() {
      return isSignedIn() && (
        request.auth.uid in ["t8nPnZLcTiaLJSKMuLzib3C5nPn1", "D1q2GPM95rZi38cvCzvsjcWQDaV2", "koKj5ObSGXYeO1PLKU5bgo8Yaky1"] ||
        (request.auth.token.keys().contains('email') && request.auth.token.email.lower() in [
          "f.mallet81@outlook.com",
          "f.mallet81@gmail.com",
          "fabrice.mallet@gmail.com",
          "kledostyle@outlook.com",
          "kledostyle@hotmail.com"
        ])
      );
    }

    // ======================================================
    // 2. JETONS D'ACCÈS (PRIORITAIRE)
    // ======================================================
    
    match /access_tokens/{tokenId} {
      // Autoriser GET pour vérification publique (avant connexion)
      allow get: if true;
      // Autoriser LIST et UPDATE uniquement si connecté
      allow list, update: if isSignedIn();
    }

    // ======================================================
    // 3. BYPASS MASTER ADMIN
    // ======================================================

    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }

    // ======================================================
    // 4. RÈGLES CAMPAGNES & REACH
    // ======================================================
    
    match /campaigns/{campaignId} {
      allow read, write: if isSignedIn();
    }

    match /users {
      allow list: if isSignedIn();
    }

    // ======================================================
    // 5. RÈGLES PUBLIQUES (LECTURE)
    // ======================================================

    match /app_settings/{document=**} { allow read: if true; }
    match /system_notifications/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { allow read, write: if isSignedIn(); }
    }
    match /sound_library/{id} { allow read: if true; }
    match /businesses/{businessId} { allow get, list: if true; }
    match /{path=**}/promotions/{promoId} { allow read: if true; }

    // ======================================================
    // 6. RÈGLES UTILISATEURS & PRIVÉES
    // ======================================================

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (request.auth.uid == userId);
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId);
      }
    }

    match /conversations/{convId} {
      allow read, write: if isSignedIn() && (request.auth.uid == convId);
      match /messages/{msgId} {
        allow read, write: if isSignedIn() && (request.auth.uid == convId);
      }
    }
    
    match /cms_support/tickets/items/{id} {
      allow create: if isSignedIn();
      allow read, write: if isSignedIn() && (resource.data.userId == request.auth.uid);
    }

    match /shared_access_tokens/{id} { allow read: if true; }
    match /spot_shares/{id} { allow read, write: if isSignedIn(); }
    
    match /hunting_sessions/{sessionId} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} { allow read, write: if isSignedIn(); }
    }
    match /vessel_sessions/{sessionId} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} { allow read, write: if isSignedIn(); }
    }
    
    match /vessels/{allPaths=**} { allow read, write: if isSignedIn(); }
  }
}
