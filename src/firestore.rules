rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // 1. FONCTIONS DE SÉCURITÉ
    // ======================================================

    function isSignedIn() {
      return request.auth != null;
    }

    // Détection Admin Maître (Prioritaire)
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email.lower() == "f.mallet81@outlook.com" || 
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" ||
        (request.auth.token.email != null && 
         request.auth.token.email.lower() in [
           "fabrice.mallet@gmail.com",
           "f.mallet81@gmail.com",
           "f.mallet81@outlook.com"
         ]
        )
      );
    }

    // ======================================================
    // 2. RÈGLE ALPHA - ACCÈS TOTAL ADMIN
    // ======================================================
    
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // ======================================================
    // 3. RÈGLES DE LISTAGE (Pour le Dashboard Admin)
    // ======================================================
    
    match /users { allow list: if isAdmin(); }
    match /conversations { allow list: if isAdmin(); }
    match /businesses { allow list: if isAdmin(); }
    match /campaigns { allow list: if isAdmin(); }

    // ======================================================
    // 4. RÈGLES STANDARDS (Pour les utilisateurs)
    // ======================================================

    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    match /conversations/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    // Accès Publics
    match /app_settings/{id} { allow read: if true; }
    match /system_notifications/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { 
        allow get, list: if true; 
        allow create, update: if isSignedIn(); 
      }
    }
    match /sound_library/{id} { allow get, list: if true; }
    match /cms_support/faq/items/{id} { allow get, list: if true; }
    match /shared_access_tokens/{id} { allow get, list: if true; }

    // Support (Tickets)
    match /cms_support/tickets/items/{id} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Business & Commerces
    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin());
      match /promotions/{promoId} { 
        allow get, list: if true; 
        allow write: if isSignedIn(); 
      }
    }

    match /campaigns/{campaignId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin());
    }
    
    match /spot_shares/{id} {
      allow create: if isSignedIn();
      allow read, delete: if isSignedIn() && (
        isAdmin() || 
        (request.auth.token.email != null && resource.data.recipientEmail == request.auth.token.email.lower())
      );
    }

    // Boat Tracker & Sessions
    match /vessels/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} { allow read, write: if isSignedIn(); }
    }
    match /hunting_sessions/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} { allow read, write: if isSignedIn(); }
    }
  }
}