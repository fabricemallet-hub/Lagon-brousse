rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. ACCÈS ALPHA PRIORITAIRE (ADMIN OUTLOOK) ---
    // On définit l'accès pour f.mallet81@outlook.com (UID: t8nPnZLcTiaLJSKMuLzib3C5nPn1)
    // Nous utilisons des blocs explicites pour garantir le droit de listage (list).
    
    function isMaster() {
      return request.auth != null && (
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" ||
        (request.auth.token.email != null && request.auth.token.email.lower() == "f.mallet81@outlook.com")
      );
    }

    // Autorisations explicites sur les racines de collections pour le Dashboard Admin
    match /conversations { allow read, write: if isMaster(); }
    match /conversations/{allPaths=**} { allow read, write: if isMaster(); }
    
    match /users { allow read, write: if isMaster(); }
    match /users/{allPaths=**} { allow read, write: if isMaster(); }
    
    match /businesses { allow read, write: if isMaster(); }
    match /businesses/{allPaths=**} { allow read, write: if isMaster(); }
    
    match /campaigns { allow read, write: if isMaster(); }
    match /campaigns/{allPaths=**} { allow read, write: if isMaster(); }

    match /vessels { allow read, write: if isMaster(); }
    match /vessels/{allPaths=**} { allow read, write: if isMaster(); }

    match /hunting_sessions { allow read, write: if isMaster(); }
    match /hunting_sessions/{allPaths=**} { allow read, write: if isMaster(); }

    // Règle de secours globale pour le Master
    match /{allPaths=**} {
      allow read, write: if isMaster();
    }

    // --- 2. RÈGLES UTILISATEURS STANDARDS (NON-ADMIN) ---
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{allPaths=**} { allow read, write: if request.auth != null && request.auth.uid == userId; }
    }

    match /conversations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{allPaths=**} { allow read, write: if request.auth != null && request.auth.uid == userId; }
    }

    // Accès Publics
    match /app_settings/{id} { allow read: if true; }
    match /system_notifications/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { 
        allow get, list: if true; 
        allow create, update: if request.auth != null; 
      }
    }
    match /sound_library/{id} { allow get, list: if true; }
    match /cms_support/faq/items/{id} { allow get, list: if true; }
    match /shared_access_tokens/{id} { allow get, list: if true; }

    // Support (Tickets)
    match /cms_support/tickets/items/{id} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isMaster());
    }

    // Business & Commerces
    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.ownerId == request.auth.uid || isMaster());
      match /promotions/{promoId} { 
        allow get, list: if true; 
        allow write: if request.auth != null; 
      }
    }

    match /campaigns/{campaignId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.ownerId == request.auth.uid || isMaster());
    }
    
    match /spot_shares/{id} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null && (request.auth.token.email != null && resource.data.recipientEmail == request.auth.token.email.lower());
    }
  }
}