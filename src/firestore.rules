rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- ACCÈS MAÎTRE PRIORITAIRE (UID Fabrice Mallet) ---
    // Cette règle autorise tout pour votre identifiant de confiance au sommet du fichier.
    function isMasterAdmin() {
      return request.auth != null && (
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" || 
        request.auth.uid == "K9cVYLVUk1NV99YV3anebkugpPp1" ||
        request.auth.uid == "ipupi3Pg4RfrSEpFyT69BtlCdpi2" ||
        request.auth.uid == "Irglq69MasYdNwBmUu8yKvw6h4G2"
      );
    }

    // Autorisation explicite de listage et lecture sur les collections racines pour l'admin
    match /conversations { allow list, read: if isMasterAdmin(); }
    match /users { allow list, read: if isMasterAdmin(); }
    match /businesses { allow list, read: if isMasterAdmin(); }
    match /campaigns { allow list, read: if isMasterAdmin(); }

    // Accès total récursif pour les admins
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }

    // --- RÈGLES STANDARDS POUR LES UTILISATEURS ---

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /conversations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /app_settings/{id} { allow read: if true; }
    match /system_notifications/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { 
        allow get, list: if true; 
        allow create, update: if request.auth != null; 
      }
    }
    match /sound_library/{id} { allow get, list: if true; }
    match /cms_support/faq/items/{id} { allow get, list: if true; }
    match /shared_access_tokens/{id} { allow get, list: if true; }

    match /cms_support/tickets/items/{id} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    match /hunting_sessions/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }
    
    match /vessels/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }

    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
      
      match /promotions/{promoId} { 
        allow get, list: if true; 
        allow write: if request.auth != null; 
      }
    }

    match /campaigns/{campaignId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }
    
    match /spot_shares/{id} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null && (request.auth.token.email != null && resource.data.recipientEmail == request.auth.token.email.lower());
    }
  }
}
