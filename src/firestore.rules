
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // 1. FONCTIONS DE SÉCURITÉ & MASTER ADMIN
    // ======================================================
    
    function isSignedIn() {
      return request.auth != null;
    }

    // Détection Master Admin via UID ou Email
    function isMasterAdmin() {
      return isSignedIn() && (
        request.auth.uid in ["t8nPnZLcTiaLJSKMuLzib3C5nPn1", "D1q2GPM95rZi38cvCzvsjcWQDaV2"] ||
        (request.auth.token.email != null && (
          request.auth.token.email.lower() == "f.mallet81@outlook.com" ||
          request.auth.token.email.lower() == "f.mallet81@gmail.com" ||
          request.auth.token.email.lower() == "fabrice.mallet@gmail.com"
        ))
      );
    }

    // Détection compte Professionnel
    function isProfessional() {
      return isSignedIn() && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'professional' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionStatus == 'professional'
      );
    }

    // Bypass total pour Master Admin
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }

    // ======================================================
    // 2. RÈGLES PUBLIQUES (LECTURE)
    // ======================================================

    // Accès public total pour les réglages de l'application (Splash, CGV, etc.)
    match /app_settings/{document=**} { 
      allow read: if true; 
    }
    
    match /system_notifications/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { allow read, write: if isSignedIn(); }
    }
    match /sound_library/{id} { allow read: if true; }
    match /businesses/{businessId} { allow get, list: if true; }
    match /{path=**}/promotions/{promoId} { allow read: if true; }

    // ======================================================
    // 3. RÈGLES UTILISATEURS & PRIVÉES
    // ======================================================

    match /users/{userId} {
      // Un utilisateur peut voir son propre profil
      // Un Admin ou un Pro peut lister les utilisateurs pour les calculs d'audience
      allow get: if isSignedIn() && (request.auth.uid == userId || isMasterAdmin());
      allow list: if isMasterAdmin() || isProfessional();
      
      allow write: if isSignedIn() && (request.auth.uid == userId);
      
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId);
      }
    }

    match /conversations/{convId} {
      allow read, write: if isSignedIn() && (request.auth.uid == convId);
      match /messages/{msgId} {
        allow read, write: if isSignedIn() && (request.auth.uid == convId);
      }
    }
    
    match /cms_support/tickets/items/{id} {
      allow create: if isSignedIn();
      allow read, write: if isSignedIn() && (resource.data.userId == request.auth.uid);
    }

    match /access_tokens/{id} { allow read: if isSignedIn(); }
    match /shared_access_tokens/{id} { allow read: if true; }
    match /spot_shares/{id} { allow read, write: if isSignedIn(); }
    
    // Sessions de Groupe & Tracker
    match /hunting_sessions/{allPaths=**} { allow read, write: if isSignedIn(); }
    match /vessels/{allPaths=**} { allow read, write: if isSignedIn(); }
    match /campaigns/{id} { allow read, write: if isSignedIn(); }
  }
}
