rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. ACCÈS MASTER ADMIN (PRIORITÉ ABSOLUE / BYPASS) ---
    // Cette règle garantit que Fabrice Mallet ne sera JAMAIS bloqué par une règle ultérieure.
    match /{allPaths=**} {
      allow read, write: if request.auth != null && (
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" || 
        request.auth.uid == "koKj5ObSGXYeO1PLKU5bgo8Yaky1"
      );
    }

    // --- 2. FONCTIONS DE SÉCURITÉ ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" ||
        request.auth.uid == "koKj5ObSGXYeO1PLKU5bgo8Yaky1" ||
        request.auth.uid == "D1q2GPM95rZi38cvCzvsjcWQDaV2" ||
        request.auth.uid == "K9cVYLVUk1NV99YV3anebkugpPp1" ||
        request.auth.uid == "ipupi3Pg4RfrSEpFyT69BtlCdpi2" ||
        request.auth.uid == "Irglq69MasYdNwBmUu8yKvw6h4G2" ||
        (request.auth.token.get('email', '').lower() in [
          "f.mallet81@outlook.com",
          "fabrice.mallet@gmail.com",
          "f.mallet81@gmail.com",
          "kledostyle@outlook.com"
        ])
      );
    }

    // --- 3. ACCÈS PUBLICS & SYSTÈME ---
    match /shared_access_tokens/{id} { allow read: if true; }
    match /app_settings/{id} { allow read: if true; }
    match /access_tokens/{id} { allow get: if isSignedIn(); }
    match /sound_library/{id} { allow read: if true; }
    match /system_notifications/{id} { allow read: if true; }

    // --- 4. MÉTIER & CATALOGUE ---
    match /{path=**}/promotions/{promoId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /users { allow list: if isSignedIn(); }
    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }

    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { allow read, write: if isSignedIn(); }
    }

    // --- 5. FONCTIONNALITÉS CONNECTÉES ---
    match /cms_support/{allPaths=**} { allow read, write: if isSignedIn(); }
    match /hunting_sessions/{id} { allow read, write: if isSignedIn(); match /{allPaths=**} { allow read, write: if isSignedIn(); } }
    match /vessels/{id} { allow read, write: if isSignedIn(); match /{allPaths=**} { allow read, write: if isSignedIn(); } }
    match /spot_shares/{id} { allow read, write: if isSignedIn(); }
    match /businesses/{businessId} { allow get, list: if true; allow write: if isSignedIn(); }
    match /campaigns/{campaignId} { allow read, write: if isSignedIn(); }
    match /conversations/{id} {
      allow read, write: if isSignedIn() && (request.auth.uid == id || isAdmin());
      match /{allPaths=**} { allow read, write: if isSignedIn() && (request.auth.uid == id || isAdmin()); }
    }
  }
}