rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FONCTIONS DE SÉCURITÉ ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.uid in [
          "D1q2GPM95rZi38cvCzvsjcWQDaV2",
          "t8nPnZLcTiaLJSKMuLzib3C5nPn1", 
          "K9cVYLVUk1NV99YV3anebkugpPp1", 
          "ipupi3Pg4RfrSEpFyT69BtlCdpi2", 
          "Irglq69MasYdNwBmUu8yKvw6h4G2",
          "koKj50bSGXYeO1PLKU5bgo8Yaky1"
        ] ||
        (request.auth.token.email != null && 
         request.auth.token.email.lower() in [
           "f.mallet81@outlook.com",
           "fabrice.mallet@gmail.com",
           "f.mallet81@gmail.com"
         ]
        ) ||
        request.auth.token.role == 'admin'
      );
    }

    // --- 1. ACCÈS TOTAL MASTER (BYPASS) ---
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }

    // --- 2. ACCÈS PUBLICS & PARTAGÉS ---
    match /app_settings/{id} { allow read: if true; }
    match /system_notifications/{id} { allow read: if true; }
    match /sound_library/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { allow read, write: if isSignedIn(); }
    }
    match /businesses/{businessId} {
      allow get, list: if true;
      allow write: if isSignedIn();
      match /promotions/{promoId} { allow read, write: if isSignedIn(); }
    }
    // Collection group pour le shopping
    match /{path=**}/promotions/{promoId} { allow read: if true; }

    // --- 3. UTILISATEURS & REACH ---
    match /users {
      // Indispensable pour RunAggregationQuery (Comptage Reach)
      allow list: if isSignedIn();
      
      match /{userId} {
        allow get: if isSignedIn() && (request.auth.uid == userId || isAdmin());
        allow write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
        
        match /{allPaths=**} {
          allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
        }
      }
    }

    // --- 4. FONCTIONNALITÉS PRIVÉES ---
    match /conversations/{id} {
      allow read, write: if isSignedIn() && (request.auth.uid == id || isAdmin());
      match /{allPaths=**} { allow read, write: if isSignedIn() && (request.auth.uid == id || isAdmin()); }
    }
    match /spot_shares/{id} { allow read, write: if isSignedIn(); }
    match /vessels/{id} { allow read, write: if isSignedIn(); match /{allPaths=**} { allow read, write: if isSignedIn(); } }
    match /hunting_sessions/{id} { allow read, write: if isSignedIn(); match /{allPaths=**} { allow read, write: if isSignedIn(); } }
    match /campaigns/{campaignId} { allow read, write: if isSignedIn(); }
  }
}