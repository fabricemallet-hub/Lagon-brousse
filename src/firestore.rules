rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FONCTION DE SÉCURITÉ MAÎTRE ---
    // On définit ici les accès absolus pour les administrateurs techniques.
    function isMasterAdmin() {
      return request.auth != null && (
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" ||
        request.auth.uid == "K9cVYLVUk1NV99YV3anebkugpPp1" ||
        request.auth.uid == "ipupi3Pg4RfrSEpFyT69BtlCdpi2" ||
        request.auth.uid == "Irglq69MasYdNwBmUu8yKvw6h4G2"
      );
    }

    // --- ACCÈS GLOBAL PRIORITAIRE ---
    // Cette règle autorise TOUT pour les administrateurs listés ci-dessus.
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }

    // --- RÈGLES PAR COLLECTION (Pour garantir le listage racine) ---

    // 1. MESSAGERIE & CONVERSATIONS
    match /conversations {
      allow list: if request.auth != null && (isMasterAdmin() || resource.data.userId == request.auth.uid);
    }
    match /conversations/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isMasterAdmin());
      match /{allPaths=**} {
        allow read, write: if request.auth != null && (request.auth.uid == userId || isMasterAdmin());
      }
    }

    // 2. UTILISATEURS
    match /users {
      allow list: if isMasterAdmin();
    }
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isMasterAdmin());
      match /{allPaths=**} {
        allow read, write: if request.auth != null && (request.auth.uid == userId || isMasterAdmin());
      }
    }

    // 3. SERVICES PUBLICS & APP SETTINGS
    match /app_settings/{id} { allow read: if true; }
    match /system_notifications/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { 
        allow get, list: if true; 
        allow create, update: if request.auth != null; 
      }
    }
    match /sound_library/{id} { allow get, list: if true; }
    match /cms_support/faq/items/{id} { allow get, list: if true; }
    match /shared_access_tokens/{id} { allow get, list: if true; }

    // 4. TICKETS SUPPORT
    match /cms_support/tickets/items/{id} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isMasterAdmin());
    }

    // 5. SESSIONS TEMPS RÉEL (HUNTING & VESSELS)
    match /hunting_sessions/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }
    match /vessels/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }

    // 6. COMMERCES & BUSINESS
    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.ownerId == request.auth.uid || isMasterAdmin());
      
      match /promotions/{promoId} { 
        allow get, list: if true; 
        allow write: if request.auth != null; 
      }
    }

    match /campaigns/{campaignId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.ownerId == request.auth.uid || isMasterAdmin());
    }
    
    match /spot_shares/{id} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null && (isMasterAdmin() || (request.auth.token.email != null && resource.data.recipientEmail == request.auth.token.email.lower()));
    }
  }
}