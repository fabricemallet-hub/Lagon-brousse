rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. PRIORITÉ ABSOLUE : MASTER ADMIN (BYPASS TOTAL) ---
    // Cette règle autorise TOUT pour l'administrateur principal.
    // Placée au sommet pour court-circuiter toute autre restriction.
    match /{allPaths=**} {
      allow read, write: if request.auth != null && (
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" || 
        (request.auth.token.email != null && request.auth.token.email.toLower() == "f.mallet81@outlook.com")
      );
    }

    // --- 2. FONCTIONS DE BASE ---
    function isSignedIn() {
      return request.auth != null;
    }

    // Récupère le rôle de l'utilisateur depuis son document Firestore
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.uid in [
          "t8nPnZLcTiaLJSKMuLzib3C5nPn1", // Fabrice Mallet
          "koKj5ObSGXYeO1PLKU5bgo8Yaky1",
          "D1q2GPM95rZi38cvCzvsjcWQDaV2",
          "K9cVYLVUk1NV99YV3anebkugpPp1",
          "ipupi3Pg4RfrSEpFyT69BtlCdpi2",
          "Irglq69MasYdNwBmUu8yKvw6h4G2"
        ] ||
        getUserRole() == "admin" ||
        (request.auth.token.email != null && 
         request.auth.token.email.toLower() in [
           "f.mallet81@outlook.com",
           "fabrice.mallet@gmail.com",
           "f.mallet81@gmail.com",
           "kledostyle@outlook.com"
         ])
      );
    }

    function isProfessional() {
      return isSignedIn() && (getUserRole() == "professional" || isAdmin());
    }

    // --- 3. PRIORITÉ CATALOGUE SHOPPING ---
    match /{path=**}/promotions/{promoId} {
      allow read, get, list: if true;
      allow write: if isProfessional();
    }

    // --- 4. UTILISATEURS & REACH ---
    match /users {
      allow list: if isSignedIn();
    }

    match /users/{userId} {
      allow read: if isSignedIn(); 
      allow write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    // --- 5. COMMERCES & PROMOTIONS ---
    match /businesses/{businessId} {
      allow get, list: if true;
      allow write: if isProfessional();
      
      match /promotions/{promoId} {
        allow read: if true;
        allow write: if isProfessional();
      }
    }

    // --- 6. ACCÈS PUBLICS ---
    match /app_settings/{id} { allow read: if true; allow write: if isAdmin(); }
    match /system_notifications/{id} { allow read: if true; allow write: if isAdmin(); }
    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { allow read, write: if isSignedIn(); }
    }
    match /sound_library/{id} { allow read: if true; allow write: if isAdmin(); }

    // --- 7. FONCTIONNALITÉS CONNECTÉES ---
    match /cms_support/faq/items/{id} { allow get, list: if true; allow write: if isAdmin(); }
    match /cms_support/tickets/items/{id} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow write: if isAdmin();
    }
    
    match /hunting_sessions/{id} { allow read, write: if isSignedIn(); match /{allPaths=**} { allow read, write: if isSignedIn(); } }
    match /vessels/{id} { allow read, write: if isSignedIn(); match /{allPaths=**} { allow read, write: if isSignedIn(); } }
    match /spot_shares/{id} { allow read, write: if isSignedIn(); }
    
    match /campaigns/{campaignId} { 
      allow create: if isProfessional();
      allow read: if (isProfessional() && resource.data.ownerId == request.auth.uid) || isAdmin();
      allow write: if isAdmin();
    }

    match /conversations/{convId} {
      allow read, write: if isSignedIn() && (request.auth.uid == convId || isAdmin());
      match /messages/{msgId} {
        allow read, write: if isSignedIn() && (request.auth.uid == convId || isAdmin());
      }
    }
    
    match /access_tokens/{tokenId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /shared_access_tokens/{tokenId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}