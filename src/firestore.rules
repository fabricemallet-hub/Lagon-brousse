rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FONCTIONS DE SÉCURITÉ ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isMaster() {
      return isSignedIn() && (
        request.auth.uid in [
          "D1q2GPM95rZi38cvCzvsjcWQDaV2",
          "t8nPnZLcTiaLJSKMuLzib3C5nPn1", 
          "K9cVYLVUk1NV99YV3anebkugpPp1", 
          "ipupi3Pg4RfrSEpFyT69BtlCdpi2", 
          "Irglq69MasYdNwBmUu8yKvw6h4G2"
        ] ||
        (request.auth.token.email != null && 
         request.auth.token.email.lower() in [
           "f.mallet81@outlook.com",
           "fabrice.mallet@gmail.com",
           "f.mallet81@gmail.com"
         ]
        )
      );
    }

    // --- 1. BYPASS UNIVERSEL MASTER (PRIORITAIRE) ---
    // Cette règle autorise TOUT pour les administrateurs listés ci-dessus
    match /{allPaths=**} {
      allow read, write: if isMaster();
    }

    // --- 2. ACCÈS CATALOGUE PUBLIC (INDISPENSABLE POUR SHOPPING NC) ---
    // La syntaxe {path=**} est obligatoire pour autoriser le collectionGroup()
    match /{path=**}/promotions/{promoId} {
      allow read: if true;
      // L'écriture est déjà gérée par le bypass Master ou la règle spécifique businesses ci-dessous
    }

    // --- 3. ACCÈS PUBLICS & USAGERS ---
    match /app_settings/{id} {
      allow read: if true;
    }

    match /system_notifications/{id} {
      allow read: if true;
    }

    match /meteo_caledonie/{id} {
      allow get, list: if true;
      match /previsions/{prevId} {
        allow get, list: if true;
      }
    }

    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} {
        allow get, list: if true;
        allow create, update: if isSignedIn();
      }
    }

    match /sound_library/{id} {
      allow read: if true;
    }

    // --- 4. DONNÉES PRIVÉES (PROPRIÉTAIRE) ---
    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId);
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId);
      }
    }

    match /conversations/{id} {
      allow read, write: if isSignedIn() && (request.auth.uid == id);
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == id);
      }
    }

    match /spot_shares/{id} {
      allow create: if isSignedIn();
      allow read, delete: if isSignedIn() && (
        request.auth.token.email != null && resource.data.recipientEmail.lower() == request.auth.token.email.lower()
      );
    }

    match /vessels/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} { allow read, write: if isSignedIn(); }
    }

    match /hunting_sessions/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} { allow read, write: if isSignedIn(); }
    }

    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid);
      
      match /promotions/{promoId} { 
        allow read: if true;
        allow write: if isSignedIn() && (get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId == request.auth.uid);
      }
    }

    match /campaigns/{campaignId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.ownerId == request.auth.uid);
    }
  }
}