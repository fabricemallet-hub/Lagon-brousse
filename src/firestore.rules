rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // HELPERS
    function isAuth() { return request.auth != null; }
    function isAdmin() { 
      return isAuth() && (
        request.auth.token.email.lower() in ['f.mallet81@gmail.com', 'f.mallet81@outlook.com'] ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionStatus == 'admin')
      );
    }

    // --- COLLECTION RULES ---

    // Paramètres système (Splash screen, configuration globale)
    match /app_settings/{id} {
      allow read: if true; // Public pour que le splash fonctionne dès le chargement
      allow write: if isAdmin();
    }

    // Météo en temps réel (Migration du StreamBuilder)
    match /meteo_caledonie/{communeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Sessions de chasse
    match /hunting_sessions/{sId} {
      allow read, write: if isAuth();
      match /participants/{pId} {
        allow read, write: if isAuth();
      }
    }

    // Profils utilisateurs
    match /users/{uId} {
      allow read, write: if isAdmin() || (isAuth() && request.auth.uid == uId);
      match /{allPaths=**} {
        allow read, write: if isAdmin() || (isAuth() && request.auth.uid == uId);
      }
    }

    // Tracker maritime
    match /vessels/{vId} {
      allow read, write: if isAuth();
      match /{allPaths=**} { allow read, write: if isAuth(); }
    }

    // Jetons et Accès
    match /access_tokens/{tId} { allow read, write: if isAuth(); }
    match /shared_access_tokens/{tId} { allow read: if isAuth(); allow write: if isAdmin(); }
    
    // Conversations Messagerie
    match /conversations/{cId} {
      allow read, write: if isAdmin() || (isAuth() && request.auth.uid == cId);
      match /{allPaths=**} { allow read, write: if isAdmin() || (isAuth() && request.auth.uid == cId); }
    }

    // Règle par défaut pour les autres collections (stations, etc.)
    match /{allPaths=**} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
  }
}