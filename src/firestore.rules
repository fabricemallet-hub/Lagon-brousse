rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FONCTIONS DE SÉCURITÉ ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isMaster() {
      return isSignedIn() && (
        request.auth.uid in ["t8nPnZLcTiaLJSKMuLzib3C5nPn1", "K9cVYLVUk1NV99YV3anebkugpPp1", "ipupi3Pg4RfrSEpFyT69BtlCdpi2", "Irglq69MasYdNwBmUu8yKvw6h4G2"] ||
        (request.auth.token.email != null && 
         request.auth.token.email.lower() in [
           "f.mallet81@outlook.com",
           "fabrice.mallet@gmail.com",
           "f.mallet81@gmail.com"
         ]
        )
      );
    }

    // --- 1. BYPASS UNIVERSEL MASTER ---
    match /{allPaths=**} {
      allow read, write: if isMaster();
    }

    // --- 2. ACCÈS PUBLICS & USAGERS ---
    match /app_settings/{id} {
      allow read: if true;
    }

    match /system_notifications/{id} {
      allow read: if true;
    }

    match /meteo_caledonie/{id} {
      allow get, list: if true;
      match /previsions/{prevId} {
        allow get, list: if true;
      }
    }

    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} {
        allow get, list: if true;
        allow create, update: if isSignedIn();
      }
    }

    match /sound_library/{id} {
      allow read: if true;
    }

    // --- 3. DONNÉES PRIVÉES (PROPRIÉTAIRE OU MASTER) ---
    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId || isMaster());
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isMaster());
      }
    }

    match /conversations/{id} {
      allow read, write: if isSignedIn() && (request.auth.uid == id || isMaster());
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == id || isMaster());
      }
    }

    match /spot_shares/{id} {
      allow create: if isSignedIn();
      allow read, delete: if isSignedIn() && (
        isMaster() || 
        (request.auth.token.email != null && resource.data.recipientEmail.lower() == request.auth.token.email.lower())
      );
    }

    match /vessels/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} { allow read, write: if isSignedIn(); }
    }

    match /hunting_sessions/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} { allow read, write: if isSignedIn(); }
    }

    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isMaster());
      match /promotions/{promoId} { allow read, write: if isSignedIn(); }
    }

    match /campaigns/{campaignId} {
      allow read, write: if isMaster();
    }
  }
}