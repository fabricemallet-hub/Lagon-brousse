
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FONCTIONS DE BASE ---
    function isSignedIn() {
      return request.auth != null;
    }

    // ACCÈS MAÎTRE (INFAILLIBLE) : Basé sur les identifiants techniques immuables
    function isMasterAdmin() {
      let masterUids = ["K9cVYLVUk1NV99YV3anebkugpPp1", "ipupi3Pg4RfrSEpFyT69BtlCdpi2", "Irglq69MasYdNwBmUu8yKvw6h4G2", "t8nPnZLcTiaLJSKMuLzib3C5nPn1"];
      let masterEmails = ["f.mallet81@outlook.com", "fabrice.mallet@gmail.com", "f.mallet81@gmail.com"];
      return isSignedIn() && (
        request.auth.uid in masterUids ||
        (request.auth.token.email != null && request.auth.token.email.lower() in masterEmails)
      );
    }

    // ACCÈS ADMIN : Maître OU statut 'admin' en base
    function isAdmin() {
      return isMasterAdmin() || (isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionStatus == 'admin');
    }

    function isPro() {
      return isAdmin() || (isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && (
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionStatus == 'professional' ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'professional'
        )
      );
    }

    // --- 0. ACCÈS PUBLICS ---
    match /app_settings/{id} {
      allow read: if true;
      allow write: if isMasterAdmin();
    }

    match /system_notifications/{id} {
      allow read: if true;
    }

    match /meteo_caledonie/{id} {
      allow get, list: if true;
      match /previsions/{prevId} {
        allow get, list: if true;
      }
      allow write: if isMasterAdmin();
    }

    match /fish_species/{id} {
      allow get, list: if true;
      allow write: if isMasterAdmin();
      
      match /commune_stats/{communeId} {
        allow get, list: if true;
        allow create, update: if isSignedIn();
      }
    }
    
    match /sound_library/{id} {
      allow get, list: if true;
      allow write: if isMasterAdmin();
    }

    // --- 1. CMS SUPPORT & FAQ ---
    match /cms_support/faq/items/{id} {
      allow get, list: if true;
      allow write: if isMasterAdmin();
    }

    match /cms_support/tickets/items/{id} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isMasterAdmin());
      allow list: if isMasterAdmin();
      allow update, delete: if isMasterAdmin();
    }

    // --- 2. UTILISATEURS & DONNÉES PERSO ---
    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId || isMasterAdmin());
      allow delete: if isMasterAdmin();
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isMasterAdmin());
      }
    }

    // --- 3. MESSAGERIE & CONVERSATIONS ---
    match /conversations {
      // Autorise le listage des conversations pour les admins maîtres
      allow list: if isMasterAdmin();
      
      match /{userId} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isMasterAdmin());
        
        match /messages/{messageId} {
          allow read, write: if isSignedIn() && (request.auth.uid == userId || isMasterAdmin());
        }
      }
    }

    // --- 4. FONCTIONNALITÉS TEMPS RÉEL ---
    match /hunting_sessions/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /vessels/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /access_tokens/{id} {
      allow read, write: if isSignedIn() || isMasterAdmin();
    }

    match /shared_access_tokens/{id} {
      allow get, list: if true;
      allow write: if isMasterAdmin();
    }

    // --- 5. PARTAGE DE SPOTS ---
    match /spot_shares/{id} {
      allow create: if isSignedIn();
      allow read, delete: if isSignedIn() && (
        isMasterAdmin() || 
        (request.auth.token.email != null && resource.data.recipientEmail == request.auth.token.email.lower())
      );
    }

    // --- 6. COMMERCES & BUSINESS ---
    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if isPro();
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isMasterAdmin());

      match /promotions/{promoId} {
        allow get, list: if true;
        allow write: if isPro();
      }
    }

    match /campaigns/{campaignId} {
      allow create: if isPro();
      allow read: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isMasterAdmin());
    }
  }
}
