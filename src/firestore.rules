rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // 1. FONCTIONS DE SÉCURITÉ MASTER
    // ======================================================
    
    function isMaster() {
      return request.auth != null && (
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" ||
        request.auth.uid == "K9cVYLVUk1NV99YV3anebkugpPp1" ||
        request.auth.token.get('email', '').lower() in [
          "f.mallet81@outlook.com",
          "fabrice.mallet@gmail.com",
          "f.mallet81@gmail.com"
        ]
      );
    }

    // ======================================================
    // 2. ACCÈS ADMINISTRATEUR (PRIORITÉ HAUTE)
    // ======================================================

    // Autorisation explicite pour le listage des collections racines Admin
    match /users { allow list: if isMaster(); }
    match /businesses { allow list: if isMaster(); }
    match /conversations { allow list: if isMaster(); }
    match /campaigns { allow list: if isMaster(); }
    match /system_notifications { allow list: if isMaster(); }
    match /sound_library { allow list: if isMaster(); }

    // Bypass universel récursif pour le Master Admin
    match /{allPaths=**} {
      allow read, write: if isMaster();
    }

    // ======================================================
    // 3. RÈGLES USAGERS (LOGIQUE APPLICATIVE)
    // ======================================================

    match /system_notifications/{id} {
      allow read: if true;
    }

    match /app_settings/{id} {
      allow read: if true;
    }

    match /sound_library/{id} {
      allow read: if true;
    }

    match /meteo_caledonie/{id} {
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }

    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} {
        allow get, list: if true;
        allow create, update: if request.auth != null;
      }
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /conversations/{convId} {
      // Un utilisateur lit SA conversation, l'Admin lit TOUT.
      allow read, write: if isMaster() || (request.auth != null && request.auth.uid == convId);
      match /messages/{msgId} {
        allow read, write: if isMaster() || (request.auth != null && request.auth.uid == convId);
      }
    }

    match /vessels/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }

    match /hunting_sessions/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }

    match /spot_shares/{id} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null && (
        isMaster() || 
        request.auth.token.get('email', '').lower() == resource.data.recipientEmail.lower()
      );
    }
  }
}