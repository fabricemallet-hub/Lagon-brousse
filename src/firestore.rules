
rules_version = '2';

// Version 2.0.5 - Correction forcée des permissions de listage
service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. FONCTIONS DE DÉTECTION ---
    function isSignedIn() {
      return request.auth != null;
    }

    // Identifiants Maîtres (Fabrice Mallet & Admins techniques)
    // t8nPnZLcTiaLJSKMuLzib3C5nPn1 est l'UID de Fabrice Mallet
    function isMasterAdmin() {
      return isSignedIn() && (
        request.auth.uid in ["K9cVYLVUk1NV99YV3anebkugpPp1", "ipupi3Pg4RfrSEpFyT69BtlCdpi2", "Irglq69MasYdNwBmUu8yKvw6h4G2", "t8nPnZLcTiaLJSKMuLzib3C5nPn1"] ||
        (request.auth.token.email != null && request.auth.token.email.lower() in ["f.mallet81@outlook.com", "fabrice.mallet@gmail.com", "f.mallet81@gmail.com"])
      );
    }

    // Accès Admin standard via profil DB
    function isAdmin() {
      return isMasterAdmin() || (isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionStatus == 'admin');
    }

    function isPro() {
      return isAdmin() || (isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && (
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionStatus == 'professional' ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'professional'
        )
      );
    }

    // --- 2. ACCÈS PRIORITAIRE ---
    // Les administrateurs maîtres ont un accès total sur tout
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }

    // --- 3. RÈGLES SPÉCIFIQUES ---
    
    // Messagerie & Conversations
    // La règle 'list' doit être au niveau de la collection
    match /conversations {
      allow list: if isAdmin();
      
      match /{userId} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
        match /{allPaths=**} {
          allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
        }
      }
    }

    // Public & Paramètres
    match /app_settings/{id} {
      allow read: if true;
    }

    match /system_notifications/{id} {
      allow read: if true;
    }

    match /meteo_caledonie/{id} {
      allow get, list: if true;
      match /previsions/{prevId} {
        allow get, list: if true;
      }
    }

    // Poissons & Commune Stats
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} {
        allow get, list: if true;
        allow create, update: if isSignedIn();
      }
    }
    
    match /sound_library/{id} {
      allow get, list: if true;
    }

    // Support
    match /cms_support/faq/items/{id} {
      allow get, list: if true;
    }

    match /cms_support/tickets/items/{id} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Utilisateurs
    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    // Sessions & Vessels
    match /hunting_sessions/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /vessels/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    // Jetons & Partage
    match /access_tokens/{id} {
      allow read, write: if isSignedIn() || isAdmin();
    }

    match /shared_access_tokens/{id} {
      allow get, list: if true;
    }

    match /spot_shares/{id} {
      allow create: if isSignedIn();
      allow read, delete: if isSignedIn() && (
        isAdmin() || (request.auth.token.email != null && resource.data.recipientEmail == request.auth.token.email.lower())
      );
    }

    // B2B Commerces
    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if isPro();
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin());

      match /promotions/{promoId} {
        allow get, list: if true;
        allow write: if isPro();
      }
    }

    match /campaigns/{campaignId} {
      allow create: if isPro();
      allow read: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin());
    }
  }
}
