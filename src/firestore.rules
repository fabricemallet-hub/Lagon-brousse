rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FONCTION DE SÉCURITÉ MAÎTRE ---
    // Accès absolu pour les administrateurs techniques.
    function isMasterAdmin() {
      return request.auth != null && request.auth.uid in [
        "t8nPnZLcTiaLJSKMuLzib3C5nPn1",
        "K9cVYLVUk1NV99YV3anebkugpPp1",
        "ipupi3Pg4RfrSEpFyT69BtlCdpi2",
        "Irglq69MasYdNwBmUu8yKvw6h4G2"
      ];
    }

    // --- ACCÈS RACINE PRIORITAIRE (LISTAGE DASHBOARD) ---
    // Firestore nécessite souvent une règle explicite sur la collection racine pour le listage.
    match /conversations { allow list: if isMasterAdmin(); }
    match /users { allow list: if isMasterAdmin(); }
    match /businesses { allow list: if isMasterAdmin(); }
    match /access_tokens { allow list: if isMasterAdmin(); }
    match /campaigns { allow list: if isMasterAdmin(); }
    match /fish_species { allow list: if isMasterAdmin(); }
    match /vessels { allow list: if isMasterAdmin(); }
    match /hunting_sessions { allow list: if isMasterAdmin(); }
    match /system_notifications { allow list: if isMasterAdmin(); }

    // --- ACCÈS GLOBAL RÉCURSIF ---
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }

    // --- RÈGLES STANDARDS ---

    // 1. MESSAGERIE & CONVERSATIONS (ACCÈS UTILISATEUR)
    match /conversations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // 2. UTILISATEURS
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // 3. SERVICES PUBLICS & APP SETTINGS
    match /app_settings/{id} { allow read: if true; }
    match /system_notifications/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { 
        allow get, list: if true; 
        allow create, update: if request.auth != null; 
      }
    }
    match /sound_library/{id} { allow get, list: if true; }
    match /cms_support/faq/items/{id} { allow get, list: if true; }
    match /shared_access_tokens/{id} { allow get, list: if true; }

    // 4. TICKETS SUPPORT
    match /cms_support/tickets/items/{id} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // 5. SESSIONS TEMPS RÉEL
    match /hunting_sessions/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }
    match /vessels/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }

    // 6. COMMERCES & BUSINESS
    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
      
      match /promotions/{promoId} { 
        allow get, list: if true; 
        allow write: if request.auth != null; 
      }
    }

    match /campaigns/{campaignId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }
    
    match /spot_shares/{id} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null && (request.auth.token.email != null && resource.data.recipientEmail == request.auth.token.email.lower());
    }
  }
}