rules_version = '2';

// Version 2.2.6 - Priorité Maître Totale & Listage Explicite
service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. FONCTIONS DE DÉTECTION ---
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isMasterAdmin() {
      return isSignedIn() && (
        request.auth.uid in ["t8nPnZLcTiaLJSKMuLzib3C5nPn1", "K9cVYLVUk1NV99YV3anebkugpPp1", "ipupi3Pg4RfrSEpFyT69BtlCdpi2", "Irglq69MasYdNwBmUu8yKvw6h4G2"] ||
        (request.auth.token.email != null && request.auth.token.email.lower() in [
          "f.mallet81@outlook.com", 
          "fabrice.mallet@gmail.com", 
          "f.mallet81@gmail.com"
        ])
      );
    }

    // --- 2. ACCÈS TOTAL MAÎTRE (Priorité Absolue) ---
    // Cette règle autorise TOUT aux administrateurs sur TOUTE la base.
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }

    // --- 3. RÈGLES DE LISTAGE EXPLICITES ---
    // Nécessaire pour corriger les erreurs de permissions sur les requêtes globales (Dashboard)
    
    match /conversations {
      allow list: if isMasterAdmin();
    }

    match /users {
      allow list: if isMasterAdmin();
    }

    match /businesses {
      allow list: if isMasterAdmin();
    }

    match /access_tokens {
      allow list: if isMasterAdmin();
    }

    // --- 4. RÈGLES SPÉCIFIQUES POUR UTILISATEURS STANDARDS ---
    
    match /conversations/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId);
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId);
      }
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId);
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId);
      }
    }

    match /app_settings/{id} {
      allow read: if true;
    }

    match /system_notifications/{id} {
      allow read: if true;
    }

    match /meteo_caledonie/{id} {
      allow get, list: if true;
      match /previsions/{prevId} {
        allow get, list: if true;
      }
    }

    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} {
        allow get, list: if true;
        allow create, update: if isSignedIn();
      }
    }
    
    match /sound_library/{id} {
      allow get, list: if true;
    }

    match /cms_support/faq/items/{id} {
      allow get, list: if true;
    }

    match /cms_support/tickets/items/{id} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid);
    }

    match /hunting_sessions/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /vessels/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /shared_access_tokens/{id} {
      allow get, list: if true;
    }

    match /spot_shares/{id} {
      allow create: if isSignedIn();
      allow read, delete: if isSignedIn() && (
        (request.auth.token.email != null && resource.data.recipientEmail == request.auth.token.email.lower())
      );
    }

    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid);

      match /promotions/{promoId} {
        allow get, list: if true;
        allow write: if isSignedIn();
      }
    }

    match /campaigns/{campaignId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.ownerId == request.auth.uid);
    }
  }
}