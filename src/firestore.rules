rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // 1. MASTER ADMIN BYPASS (PRIORITÉ ABSOLUE)
    // ======================================================
    
    // Fonction de vérification Master
    function isMaster() {
      return request.auth != null && (
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" ||
        request.auth.token.get('email', '').lower() in [
          "f.mallet81@outlook.com", 
          "fabrice.mallet@gmail.com", 
          "f.mallet81@gmail.com"
        ]
      );
    }

    // Bypass universel pour tous les documents
    match /{document=**} {
      allow read, write: if isMaster();
    }

    // Autorisation explicite de listage pour les collections Admin
    // (Parfois requis par le SDK pour les requêtes globales sans filtre)
    match /conversations {
      allow list: if isMaster();
    }
    match /users {
      allow list: if isMaster();
    }
    match /businesses {
      allow list: if isMaster();
    }
    match /campaigns {
      allow list: if isMaster();
    }

    // ======================================================
    // 2. RÈGLES UTILISATEURS STANDARDS
    // ======================================================

    // Profils et données personnelles
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Conversations privées (Support)
    match /conversations/{convId} {
      allow read, write: if request.auth != null && request.auth.uid == convId;
      match /{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == convId;
      }
    }

    // Accès publics et utilitaires
    match /app_settings/{id} { allow read: if true; }
    match /system_notifications/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { 
        allow get, list: if true; 
        allow create, update: if request.auth != null; 
      }
    }
    match /sound_library/{id} { allow get, list: if true; }
    match /cms_support/faq/items/{id} { allow get, list: if true; }
    match /shared_access_tokens/{id} { allow get, list: if true; }

    // Tickets support
    match /cms_support/tickets/items/{id} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isMaster());
    }

    // Commerces et Business
    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.ownerId == request.auth.uid || isMaster());
      match /promotions/{promoId} { 
        allow get, list: if true; 
        allow write: if request.auth != null; 
      }
    }

    // Partage de spots
    match /spot_shares/{id} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null && (
        isMaster() || 
        (request.auth.token.get('email', '') != null && resource.data.recipientEmail == request.auth.token.get('email', '').lower())
      );
    }

    // Vessel Tracker & Sessions
    match /vessels/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }
    match /hunting_sessions/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }
  }
}