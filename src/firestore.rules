rules_version = '2';

// Version 2.2.4 - Priorité Maître Absolue
service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. ACCÈS TOTAL MAÎTRE (Priorité Absolue) ---
    // On autorise tout pour Fabrice Mallet et les administrateurs techniques au niveau racine.
    // Cela inclut le listage de TOUTES les collections.
    match /{document=**} {
      allow read, write: if request.auth != null && (
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" || 
        request.auth.uid == "K9cVYLVUk1NV99YV3anebkugpPp1" ||
        (request.auth.token.email != null && request.auth.token.email.lower() in [
          "f.mallet81@outlook.com", 
          "fabrice.mallet@gmail.com", 
          "f.mallet81@gmail.com"
        ])
      );
    }

    // --- 2. FONCTIONS DE DÉTECTION GÉNÉRALES (Pour les autres utilisateurs) ---
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isMasterAdmin() {
      return isSignedIn() && (
        request.auth.uid in ["K9cVYLVUk1NV99YV3anebkugpPp1", "ipupi3Pg4RfrSEpFyT69BtlCdpi2", "Irglq69MasYdNwBmUu8yKvw6h4G2", "t8nPnZLcTiaLJSKMuLzib3C5nPn1"] ||
        (request.auth.token.email != null && request.auth.token.email.lower() in ["f.mallet81@outlook.com", "fabrice.mallet@gmail.com", "f.mallet81@gmail.com"])
      );
    }

    function isAdmin() {
      return isMasterAdmin() || (isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionStatus == 'admin');
    }

    function isPro() {
      return isAdmin() || (isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && (
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionStatus == 'professional' ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'professional'
        )
      );
    }

    // --- 3. RÈGLES SPÉCIFIQUES ---
    
    match /conversations/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId);
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId);
      }
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId);
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId);
      }
    }

    match /app_settings/{id} {
      allow read: if true;
    }

    match /system_notifications/{id} {
      allow read: if true;
    }

    match /meteo_caledonie/{id} {
      allow get, list: if true;
      match /previsions/{prevId} {
        allow get, list: if true;
      }
    }

    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} {
        allow get, list: if true;
        allow create, update: if isSignedIn();
      }
    }
    
    match /sound_library/{id} {
      allow get, list: if true;
    }

    match /cms_support/faq/items/{id} {
      allow get, list: if true;
    }

    match /cms_support/tickets/items/{id} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid);
    }

    match /hunting_sessions/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /vessels/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /access_tokens/{id} {
      allow read, write: if isSignedIn();
    }

    match /shared_access_tokens/{id} {
      allow get, list: if true;
    }

    match /spot_shares/{id} {
      allow create: if isSignedIn();
      allow read, delete: if isSignedIn() && (
        (request.auth.token.email != null && resource.data.recipientEmail == request.auth.token.email.lower())
      );
    }

    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if isPro();
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid);

      match /promotions/{promoId} {
        allow get, list: if true;
        allow write: if isPro();
      }
    }

    match /campaigns/{campaignId} {
      allow create: if isPro();
      allow read: if isSignedIn() && (resource.data.ownerId == request.auth.uid);
    }
  }
}