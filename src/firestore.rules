rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // 1. PRIORITÉ ABSOLUE : MASTER ADMIN (GOD MODE)
    // ======================================================
    // On autorise tout sans condition pour l'UID Master et les emails de confiance.
    match /{allPaths=**} {
      allow read, write: if request.auth != null && (
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" ||
        request.auth.token.email == "f.mallet81@outlook.com" ||
        request.auth.token.email == "fabrice.mallet@gmail.com" ||
        request.auth.token.email == "f.mallet81@gmail.com"
      );
    }

    // ======================================================
    // 2. FONCTIONS DE SÉCURITÉ
    // ======================================================
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.uid in ["t8nPnZLcTiaLJSKMuLzib3C5nPn1", "koKj5ObSGXYeO1PLKU5bgo8Yaky1", "D1q2GPM95rZi38cvCzvsjcWQDaV2", "K9cVYLVUk1NV99YV3anebkugpPp1", "ipupi3Pg4RfrSEpFyT69BtlCdpi2", "Irglq69MasYdNwBmUu8yKvw6h4G2"] ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin"
      );
    }

    function isProfessional() {
      return isSignedIn() && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "professional" || 
        isAdmin()
      );
    }

    // ======================================================
    // 3. RÈGLES PAR COLLECTION
    // ======================================================

    // Catalogue Shopping (Public)
    match /{path=**}/promotions/{promoId} {
      allow read: if true;
      allow write: if isProfessional();
    }

    // Profils Utilisateurs
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    // Commerces
    match /businesses/{businessId} {
      allow get, list: if true;
      allow write: if isProfessional();
    }

    // Données Publiques
    match /app_settings/{id} { allow read: if true; }
    match /system_notifications/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { allow read, write: if isSignedIn(); }
    }
    match /sound_library/{id} { allow read: if true; }

    // Support & Tickets
    match /cms_support/faq/items/{id} { allow get, list: if true; }
    match /cms_support/tickets/items/{id} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow write: if isAdmin();
    }

    // Fonctionnalités Terroir
    match /hunting_sessions/{id} { allow read, write: if isSignedIn(); }
    match /vessels/{id} { allow read, write: if isSignedIn(); }
    match /spot_shares/{id} { allow read, write: if isSignedIn(); }
    match /campaigns/{campaignId} { allow read, write: if isProfessional() || isAdmin(); }

    // Support (Conversations)
    match /conversations/{convId} {
      allow read, write: if isSignedIn() && (request.auth.uid == convId || isAdmin());
      match /messages/{msgId} {
        allow read, write: if isSignedIn() && (request.auth.uid == convId || isAdmin());
      }
    }

    // Jetons & Accès
    match /access_tokens/{id} { allow read, write: if isAdmin(); }
    match /shared_access_tokens/{id} { allow read, write: if isAdmin(); }
  }
}