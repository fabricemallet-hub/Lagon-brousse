rules_version = '2';

// Version 4.0.0 - ACCÈS MAÎTRE ABSOLU ET LISTAGE EXPLICITE
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FONCTION DE DÉTECTION MAÎTRE ---
    function isMasterAdmin() {
      return request.auth != null && (
        request.auth.uid in ["t8nPnZLcTiaLJSKMuLzib3C5nPn1", "K9cVYLVUk1NV99YV3anebkugpPp1", "ipupi3Pg4RfrSEpFyT69BtlCdpi2", "Irglq69MasYdNwBmUu8yKvw6h4G2"] ||
        (request.auth.token.email != null && request.auth.token.email.lower() in [
          "f.mallet81@outlook.com", 
          "fabrice.mallet@gmail.com", 
          "f.mallet81@gmail.com"
        ])
      );
    }

    // --- 1. PRIORITÉ MAXIMALE : ACCÈS TOTAL POUR ADMIN MAÎTRE ---
    // Cette règle couvre TOUTES les opérations sur TOUS les documents.
    match /{allPaths=**} {
      allow read, write: if isMasterAdmin();
    }

    // --- 2. PERMISSIONS DE LISTAGE EXPLICITES (ROOT COLLECTIONS) ---
    // Requis par le SDK pour les requêtes sur les collections racine.
    match /conversations { allow list: if isMasterAdmin(); }
    match /users { allow list: if isMasterAdmin(); }
    match /businesses { allow list: if isMasterAdmin(); }
    match /access_tokens { allow list: if isMasterAdmin(); }
    match /campaigns { allow list: if isMasterAdmin(); }
    match /vessels { allow list: if isMasterAdmin(); }
    match /hunting_sessions { allow list: if isMasterAdmin(); }

    // --- 3. RÈGLES UTILISATEURS STANDARDS ---
    
    match /conversations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /app_settings/{id} {
      allow read: if true;
    }

    match /system_notifications/{id} {
      allow read: if true;
    }

    match /meteo_caledonie/{id} {
      allow get, list: if true;
      match /previsions/{prevId} {
        allow get, list: if true;
      }
    }

    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} {
        allow get, list: if true;
        allow create, update: if request.auth != null;
      }
    }
    
    match /sound_library/{id} {
      allow get, list: if true;
    }

    match /cms_support/faq/items/{id} {
      allow get, list: if true;
    }

    match /cms_support/tickets/items/{id} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid);
    }

    match /hunting_sessions/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} {
        allow read, write: if request.auth != null;
      }
    }

    match /vessels/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} {
        allow read, write: if request.auth != null;
      }
    }

    match /spot_shares/{id} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null && (
        (request.auth.token.email != null && resource.data.recipientEmail == request.auth.token.email.lower())
      );
    }

    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.ownerId == request.auth.uid);

      match /promotions/{promoId} {
        allow get, list: if true;
        allow write: if request.auth != null;
      }
    }

    match /campaigns/{campaignId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.ownerId == request.auth.uid);
    }
  }
}