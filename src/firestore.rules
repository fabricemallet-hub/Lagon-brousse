rules_version = '2';

// VERSION 16.0.0 - ACCÈS ADMIN MAÎTRE EXPLICITE
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. DÉFINITION DE L'AUTORITÉ SUPRÊME
    // On autorise tout pour votre UID maître dès le début du traitement.
    function isMaster() {
      return request.auth != null && (
        request.auth.uid == "t8nPnZLcTiaLJSKMuLzib3C5nPn1" ||
        request.auth.uid == "K9cVYLVUk1NV99YV3anebkugpPp1" ||
        request.auth.uid == "ipupi3Pg4RfrSEpFyT69BtlCdpi2" ||
        request.auth.uid == "Irglq69MasYdNwBmUu8yKvw6h4G2"
      );
    }

    // 2. RÈGLES DE LISTAGE RACINE (Critique pour le Dashboard Admin)
    // Firestore exige souvent un match explicite sur le nom de la collection pour le listage.
    match /conversations {
      allow list: if isMaster();
    }
    match /users {
      allow list: if isMaster();
    }
    match /access_tokens {
      allow list: if isMaster();
    }
    match /businesses {
      allow list: if isMaster();
    }
    match /campaigns {
      allow list: if isMaster();
    }
    match /fish_species {
      allow list: if isMaster();
    }

    // 3. RÈGLE RÉCURSIVE GLOBALE POUR L'ADMIN
    match /{allPaths=**} {
      allow read, write: if isMaster();
    }

    // 4. RÈGLES STANDARDS POUR LES UTILISATEURS
    match /app_settings/{id} {
      allow read: if true;
    }

    match /system_notifications/{id} {
      allow read: if true;
    }

    match /meteo_caledonie/{id} {
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }

    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { 
        allow get, list: if true; 
        allow create, update: if request.auth != null; 
      }
    }
    
    match /sound_library/{id} {
      allow get, list: if true;
    }

    match /cms_support/faq/items/{id} {
      allow get, list: if true;
    }

    match /cms_support/tickets/items/{id} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid);
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId);
      match /{allPaths=**} { allow read, write: if request.auth != null && (request.auth.uid == userId); }
    }

    match /conversations/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId);
      match /{allPaths=**} { allow read, write: if request.auth != null && (request.auth.uid == userId); }
    }

    match /hunting_sessions/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }

    match /vessels/{id} {
      allow read, write: if request.auth != null;
      match /{allPaths=**} { allow read, write: if request.auth != null; }
    }

    match /shared_access_tokens/{id} {
      allow get, list: if true;
    }

    match /spot_shares/{id} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null && (
        (request.auth.token.email != null && resource.data.recipientEmail == request.auth.token.email.lower())
      );
    }

    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.ownerId == request.auth.uid);
      match /promotions/{promoId} { allow get, list: if true; allow write: if request.auth != null; }
    }

    match /campaigns/{campaignId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.ownerId == request.auth.uid);
    }
  }
}