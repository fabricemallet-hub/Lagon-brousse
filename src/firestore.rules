rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FONCTIONS DE SÉCURITÉ MASTER ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isMasterUid() {
      return isSignedIn() && request.auth.uid in [
        "t8nPnZLcTiaLJSKMuLzib3C5nPn1",
        "koKj5ObSGXYeO1PLKU5bgo8Yaky1",
        "D1q2GPM95rZi38cvCzvsjcWQDaV2",
        "K9cVYLVUk1NV99YV3anebkugpPp1",
        "ipupi3Pg4RfrSEpFyT69BtlCdpi2",
        "Irglq69MasYdNwBmUu8yKvw6h4G2"
      ];
    }

    function isMasterEmail() {
      return isSignedIn() && request.auth.token.email != null && 
             request.auth.token.email.lower() in [
               "f.mallet81@outlook.com",
               "fabrice.mallet@gmail.com",
               "f.mallet81@gmail.com",
               "kledostyle@outlook.com"
             ];
    }

    function isAdmin() {
      return isMasterUid() || isMasterEmail() || (isSignedIn() && request.auth.token.role == 'admin');
    }

    // --- 1. ACCÈS SYSTÈME PRIORITAIRE ---
    
    // Accès aux offres globales (Cadeaux / Shared Tokens)
    match /shared_access_tokens/{id} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Paramètres d'application (Splash, CGV, RIB)
    match /app_settings/{id} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Catalogue Shopping (Collection Group)
    match /{path=**}/promotions/{promoId} {
      allow read, get, list: if true;
      allow write: if isSignedIn();
    }

    // --- 2. UTILISATEURS & AUDIENCE ---
    match /users {
      // Autorise le comptage global pour le calcul de l'audience Pro
      allow list: if isSignedIn();
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    // --- 3. CONTENU PUBLIC DYNAMIQUE ---
    match /system_notifications/{id} { allow read: if true; }
    match /meteo_caledonie/{id} { 
      allow get, list: if true;
      match /previsions/{prevId} { allow get, list: if true; }
    }
    match /fish_species/{id} {
      allow get, list: if true;
      match /commune_stats/{communeId} { allow read, write: if isSignedIn(); }
    }
    match /sound_library/{id} { allow read: if true; }

    // --- 4. FONCTIONNALITÉS MÉTIER ---
    match /access_tokens/{id} {
      allow get: if isSignedIn();
      allow list, write: if isAdmin();
    }
    
    match /cms_support/faq/items/{id} { allow get, list: if true; }
    match /cms_support/tickets/items/{id} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
    }
    match /hunting_sessions/{id} { allow read, write: if isSignedIn(); match /{allPaths=**} { allow read, write: if isSignedIn(); } }
    match /vessels/{id} { allow read, write: if isSignedIn(); match /{allPaths=**} { allow read, write: if isSignedIn(); } }
    match /spot_shares/{id} { allow read, write: if isSignedIn(); }
    match /businesses/{businessId} { allow get, list: if true; allow write: if isSignedIn(); }
    match /campaigns/{campaignId} { allow read, write: if isSignedIn(); }
    match /conversations/{id} {
      allow read, write: if isSignedIn() && (request.auth.uid == id || isAdmin());
      match /{allPaths=**} { allow read, write: if isSignedIn() && (request.auth.uid == id || isAdmin()); }
    }
  }
}