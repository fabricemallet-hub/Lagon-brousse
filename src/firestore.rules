
rules_version = '2';

/**
 * LAGON & BROUSSE NC - SECURITY POLICY (SYNCED)
 */

service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBAL HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && 
        (
          (request.auth.token.email != null && request.auth.token.email.lower() in ['f.mallet81@gmail.com', 'f.mallet81@outlook.com']) ||
          (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
           get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionStatus == 'admin')
        );
    }

    // --- PUBLIC COLLECTIONS (READ FOR ALL) ---

    match /system_notifications/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /app_settings/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /meteo_caledonie/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /fish_species/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- PROTECTED COLLECTIONS (AUTH REQUIRED) ---

    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    match /hunting_sessions/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /vessels/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /conversations/{id} {
      allow read, write: if isSignedIn() && (request.auth.uid == id || isAdmin());
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == id || isAdmin());
      }
    }

    match /access_tokens/{id} {
      allow read, write: if isSignedIn() || isAdmin();
    }
    
    match /shared_access_tokens/{id} {
      allow read: if isSignedIn() || isAdmin();
      allow write: if isAdmin();
    }

    match /stations/{document=**} {
      allow read: if isSignedIn() || isAdmin();
      allow write: if isAdmin();
    }
    
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }
  }
}
