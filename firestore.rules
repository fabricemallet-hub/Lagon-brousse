rules_version = '2';

/**
 * LAGON & BROUSSE NC - SECURITY POLICY (V2.2)
 * Robust rules with explicit public access for system notifications.
 */

service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        (request.auth.token.email != null && (
          request.auth.token.email.lower() == 'f.mallet81@gmail.com' || 
          request.auth.token.email.lower() == 'f.mallet81@outlook.com'
        )) ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionStatus == 'admin')
      );
    }

    // --- PUBLIC COLLECTIONS ---
    // Explicitly allowing 'list' for queries (used by banners/lists)

    match /system_notifications/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /app_settings/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /meteo_caledonie/{id} {
      allow read: if true;
      allow write: if isAdmin();
      match /previsions/{prevId} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    match /fish_species/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /shared_access_tokens/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- PROTECTED COLLECTIONS ---

    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    match /hunting_sessions/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /vessels/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /conversations/{id} {
      allow read, write: if isSignedIn() && (request.auth.uid == id || isAdmin());
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == id || isAdmin());
      }
    }

    match /access_tokens/{id} {
      allow read, write: if isSignedIn() || isAdmin();
    }

    match /stations/{document=**} {
      allow read: if isSignedIn() || isAdmin();
      allow write: if isAdmin();
    }
  }
}