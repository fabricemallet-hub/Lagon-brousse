
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FONCTIONS DE BASE ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.uid == "K9cVYLVUk1NV99YV3anebkugpPp1" ||
        request.auth.token.email == "fabrice.mallet@gmail.com" ||
        request.auth.token.email == "f.mallet81@gmail.com" || 
        request.auth.token.email == "f.mallet81@outlook.com"
      );
    }

    // --- 1. CMS SUPPORT & FAQ ---
    match /cms_support/faq/items/{id} {
      // Public : Tout le monde voit la FAQ
      allow read: if true;
      allow write: if isAdmin();
    }

    match /cms_support/tickets/items/{id} {
      allow create: if isSignedIn();
      // Un utilisateur voit ses tickets, l'admin voit tout
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if isAdmin();
    }

    // --- 2. ACCÈS PUBLICS / GÉNÉRAUX ---
    match /app_settings/{id} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /meteo_caledonie/{id} {
      allow get, list: if true;
      match /previsions/{prevId} {
        allow get, list: if true;
      }
      allow write: if isAdmin();
    }

    match /fish_species/{id} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /sound_library/{id} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // --- 3. UTILISATEURS & DONNÉES PERSO ---
    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    // --- 4. FONCTIONNALITÉS TEMPS RÉEL ---
    match /hunting_sessions/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /vessels/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /access_tokens/{id} {
      allow read, write: if isSignedIn() || isAdmin();
    }

    match /shared_access_tokens/{id} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
  }
}
