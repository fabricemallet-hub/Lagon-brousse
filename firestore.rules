
rules_version = '2';

/**
 * LAGON & BROUSSE NC - SECURITY POLICY
 */

service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBAL HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // Priorité à l'email pour éviter les erreurs de lecture de document pendant l'auth
      return isSignedIn() && 
        (
          (request.auth.token.email != null && request.auth.token.email.lower() in ['f.mallet81@gmail.com', 'f.mallet81@outlook.com']) ||
          (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
           get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionStatus == 'admin')
        );
    }

    // --- PUBLIC COLLECTIONS (READ FOR ALL) ---
    // Placées en haut pour priorité maximale

    match /system_notifications/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /app_settings/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /meteo_caledonie/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /fish_species/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- PROTECTED COLLECTIONS (AUTH REQUIRED) ---

    match /users/{userId} {
      allow read, write: if (isSignedIn() && request.auth.uid == userId) || isAdmin();
      
      match /sowings/{sowingId} {
        allow read, write: if (isSignedIn() && request.auth.uid == userId) || isAdmin();
      }
      match /fishing_spots/{spotId} {
        allow read, write: if (isSignedIn() && request.auth.uid == userId) || isAdmin();
      }
    }

    match /hunting_sessions/{document=**} {
      allow read, write: if isSignedIn() || isAdmin();
    }

    match /vessels/{document=**} {
      allow read, write: if isSignedIn() || isAdmin();
    }

    match /conversations/{convId} {
      allow read, write: if (isSignedIn() && request.auth.uid == convId) || isAdmin();
      match /{allPaths=**} {
        allow read, write: if (isSignedIn() && request.auth.uid == convId) || isAdmin();
      }
    }

    match /access_tokens/{tokenId} {
      allow read, write: if isSignedIn() || isAdmin();
    }
    
    match /shared_access_tokens/{tokenId} {
      allow read: if isSignedIn() || isAdmin();
      allow write: if isAdmin();
    }

    match /stations/{document=**} {
      allow read: if isSignedIn() || isAdmin();
      allow write: if isAdmin();
    }
    
    // Default catch-all
    match /{allPaths=**} {
      allow read: if isSignedIn() || isAdmin();
      allow write: if isAdmin();
    }
  }
}
