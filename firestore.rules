rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // REVISION_ID: 20240524_1315_FINAL_SYNC
    // Cette version simplifiée vise à résoudre les conflits de déploiement.

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email.lower() == 'f.mallet81@gmail.com' || 
        request.auth.token.email.lower() == 'f.mallet81@outlook.com'
      );
    }

    // RÈGLE PRIORITAIRE : SESSIONS DE CHASSE
    match /hunting_sessions/{sessionId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isAdmin() || (isSignedIn() && resource.data.organizerId == request.auth.uid);
      
      match /participants/{participantId} {
        allow read, write: if isSignedIn();
      }
    }

    // PROFILS ET DONNÉES UTILISATEURS
    match /users/{userId} {
      allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
      
      match /{allPaths=**} {
        allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
      }
    }

    // MESSAGERIE
    match /conversations/{userId} {
      allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
      match /{allPaths=**} {
        allow read, write: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
      }
    }

    // JETONS D'ACCÈS
    match /access_tokens/{tokenId} {
      allow get: if isSignedIn();
      allow read, write: if isAdmin();
      allow update: if isSignedIn() && request.resource.data.status == 'redeemed';
    }

    match /shared_access_tokens/{tokenId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // TRACKER ET NAVIRES
    match /vessels/{vesselId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || (isSignedIn() && request.auth.uid == vesselId);
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    // DONNÉES STATIQUES (MÉTÉO/MARÉES)
    match /locations/{locationId} { allow read: if true; }
    match /stations/{stationId} {
      allow read: if true;
      allow write: if isAdmin();
      match /{allPaths=**} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }
  }
}