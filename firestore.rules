rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------

    // Checks if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Checks if the signed-in user is the administrator.
    // This is the single source of truth for admin privileges.
    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'f.mallet81@outlook.com';
    }

    // Checks if the signed-in user's UID matches the requested resource's UID.
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ----------------------------------------------------------------------
    // Collection Rules
    // ----------------------------------------------------------------------

    match /users/{userId} {
      // An owner can get their own document, an admin can get any.
      allow get: if isOwner(userId) || isAdmin();
      // Only an admin can list all users.
      allow list: if isAdmin();
      
      // A user can create their own document upon signup.
      // The client-side FirebaseProvider handles the creation logic.
      allow create: if isOwner(userId);
      
      // An owner can update their own document, and an admin can update any document.
      allow update: if isOwner(userId) || isAdmin();
      
      // Client-side deletion is disallowed to prevent accidental data loss.
      allow delete: if false; 
    }

    match /locations/{locationId} {
      // Location data is public and read-only for clients.
      allow get, list: if true;
      allow write: if false;
    }

    match /stations/{stationId} {
      // Station data is public, but only writable by an admin.
      allow get, list: if true;
      allow write: if isAdmin();

      match /tides/{date} {
        // Tide archives are public, but only writable by an admin.
        allow get, list: if true;
        allow write: if isAdmin();
      }
    }

    match /hunting_sessions/{sessionId} {
      // Any signed-in user can create or get a session.
      allow create, get: if isSignedIn();
      // Only the session organizer can delete it.
      allow delete: if resource.data.organizerId == request.auth.uid;
      // Listing all active sessions is disallowed for privacy.
      allow list: if false;

      match /participants/{userId} {
        // A user can only manage their own participant document.
        allow create, update, delete: if isOwner(userId);
        // Any participant in the session can read the data of other participants.
        allow read: if exists(/databases/$(database)/documents/hunting_sessions/$(sessionId)/participants/$(request.auth.uid));
      }
    }

    match /access_tokens/{tokenId} {
      // Only an admin can create, delete, or list all tokens.
      allow create, delete, list: if isAdmin();
      // Any signed-in user can attempt to read a single token (for redemption).
      allow get: if isSignedIn();
      
      // A user can update a token only if they are redeeming it for themselves.
      function isRedeemingOwnToken() {
        return request.resource.data.redeemedBy == request.auth.uid
          && request.resource.data.status == 'redeemed'
          && resource.data.status == 'active';
      }
      
      allow update: if isAdmin() || isRedeemingOwnToken();
    }
  }
}
