
rules_version = '2';

/**
 * MARÉES ET TERROIR CALÉDONIEN - SECURITY POLICY
 */

service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBAL HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email.lower() in ['f.mallet81@gmail.com', 'f.mallet81@outlook.com'] ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionStatus == 'admin')
      );
    }

    // --- COLLECTION RULES ---

    // Paramètres de l'application
    match /app_settings/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Météo NC Live
    match /meteo_caledonie/{communeId} {
      allow read: if true;
      allow write: if isAdmin();
      match /{allPaths=**} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    // Guide des Poissons (CRUD Admin)
    match /fish_species/{fishId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Profils utilisateurs
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
      match /{allPaths=**} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // Sessions de chasse
    match /hunting_sessions/{sessionId} {
      allow read, write: if isSignedIn();
      match /participants/{participantId} {
        allow read, write: if isSignedIn();
      }
    }

    // Tracker maritime
    match /vessels/{vesselId} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    // Messagerie
    match /conversations/{convId} {
      allow read, write: if isOwner(convId) || isAdmin();
      match /messages/{msgId} {
        allow read, write: if isOwner(convId) || isAdmin();
      }
    }

    // Jetons
    match /access_tokens/{tokenId} {
      allow read, write: if isSignedIn();
    }
    match /shared_access_tokens/{tokenId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Notifications Système
    match /system_notifications/{notifId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Données archives
    match /stations/{stationId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
      match /{allPaths=**} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
      }
    }
  }
}
