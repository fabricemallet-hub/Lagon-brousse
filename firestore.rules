
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'f.mallet81@outlook.com' || 
        request.auth.token.email == 'f.mallet81@gmail.com'
      );
    }

    // ----------------------------------------------------------------------
    // Collection: users
    // ----------------------------------------------------------------------
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isSignedIn();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
      
      match /fishing_spots/{spotId} {
        allow read, write: if isOwner(userId);
      }

      match /sowings/{sowingId} {
        allow read, write: if isOwner(userId);
      }
    }

    // ----------------------------------------------------------------------
    // Collection: vessels (Real-time tracking)
    // ----------------------------------------------------------------------
    match /vessels/{userId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isOwner(userId);

      match /history/{pointId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isOwner(userId);
      }
    }

    // ----------------------------------------------------------------------
    // Collection: locations
    // ----------------------------------------------------------------------
    match /locations/{locationId} {
      allow read: if true;
      allow write: if false;
    }
    
    // ----------------------------------------------------------------------
    // Collection: stations
    // ----------------------------------------------------------------------
    match /stations/{stationId} {
      allow read: if true;
      allow write: if isAdmin();
      
      match /tides/{date} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }
    
    // ----------------------------------------------------------------------
    // Collection: hunting_sessions
    // ----------------------------------------------------------------------
    match /hunting_sessions/{sessionId} {
      // Autoriser explicitement la lecture (get + list) à tout utilisateur connecté
      // Synchronisation forcee pour deploiement: 2024-05-24T12:45:00
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      // Seuls l'organisateur ou l'admin peuvent modifier/supprimer
      allow update, delete: if isAdmin() || (isSignedIn() && resource.data.organizerId == request.auth.uid);
      
      match /participants/{userId} {
        allow read: if isSignedIn();
        allow write: if isOwner(userId) || isAdmin();
      }
    }

    // ----------------------------------------------------------------------
    // Collection: access_tokens
    // ----------------------------------------------------------------------
    match /access_tokens/{tokenId} {
      allow read, write: if isAdmin();
      allow get: if isSignedIn();
      allow update: if isSignedIn() && request.resource.data.status == 'redeemed';
    }
    
    // ----------------------------------------------------------------------
    // Collection: shared_access_tokens
    // ----------------------------------------------------------------------
    match /shared_access_tokens/{tokenId} {
      allow write: if isAdmin();
      allow read: if isSignedIn();
    }

    // ----------------------------------------------------------------------
    // Collection: conversations
    // ----------------------------------------------------------------------
    match /conversations/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();

      match /messages/{messageId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }
  }
}
