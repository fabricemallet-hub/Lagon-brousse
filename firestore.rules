rules_version = '2';

/**
 * LAGON & BROUSSE NC - SECURITY POLICY (V2.5)
 * Ultra-robust rules focused on public access priority.
 */

service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. COLLECTIONS PUBLIQUES (PRIORITÉ MAXIMALE) ---
    // Autorise explicitement get (un doc) et list (requêtes/filtres) pour tous.
    
    match /system_notifications/{id} {
      allow get, list: if true;
    }
    
    match /app_settings/{id} {
      allow get, list: if true;
    }

    match /meteo_caledonie/{id} {
      allow get, list: if true;
      match /previsions/{prevId} {
        allow get, list: if true;
      }
    }

    match /fish_species/{id} {
      allow get, list: if true;
    }
    
    match /shared_access_tokens/{id} {
      allow get, list: if true;
    }

    // --- 2. FONCTIONS DE SÉCURITÉ ---

    function isSignedIn() {
      return request.auth != null;
    }

    // Admin basé sur l'email (rapide et sans lecture de doc)
    function isAdmin() {
      return isSignedIn() && 
             request.auth.token.email != null && 
             (request.auth.token.email == 'f.mallet81@gmail.com' || 
              request.auth.token.email == 'f.mallet81@outlook.com');
    }

    // --- 3. DROITS D'ÉCRITURE ADMIN ---

    match /system_notifications/{id} { allow write: if isAdmin(); }
    match /app_settings/{id} { allow write: if isAdmin(); }
    match /meteo_caledonie/{id} { 
      allow write: if isAdmin(); 
      match /previsions/{prevId} { allow write: if isAdmin(); }
    }
    match /fish_species/{id} { allow write: if isAdmin(); }
    match /shared_access_tokens/{id} { allow write: if isAdmin(); }

    // --- 4. COLLECTIONS PROTÉGÉES ---

    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    match /hunting_sessions/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /vessels/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /conversations/{id} {
      allow read, write: if isSignedIn() && (request.auth.uid == id || isAdmin());
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == id || isAdmin());
      }
    }

    match /access_tokens/{id} {
      allow read, write: if isSignedIn() || isAdmin();
    }

    match /stations/{document=**} {
      allow read: if isSignedIn() || isAdmin();
      allow write: if isAdmin();
    }
  }
}