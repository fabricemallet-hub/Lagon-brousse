rules_version = '2';

/**
 * LAGON & BROUSSE NC - SECURITY POLICY (V3.0)
 * METHODOLOGY: Recursive prioritized public access + simplified admin checks.
 * Unique Deployment ID: 20240524-1425
 */

service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. ACCÈS PUBLICS (PRIORITÉ ABSOLUE & RÉCURSIF) ---
    // On autorise la lecture complète pour les collections de contenu global.
    
    match /system_notifications/{document=**} {
      allow read: if true;
    }
    
    match /app_settings/{document=**} {
      allow read: if true;
    }

    match /meteo_caledonie/{document=**} {
      allow read: if true;
    }

    match /fish_species/{document=**} {
      allow read: if true;
    }
    
    match /shared_access_tokens/{document=**} {
      allow read: if true;
    }

    // --- 2. FONCTIONS DE SÉCURITÉ ---

    function isSignedIn() {
      return request.auth != null;
    }

    // Vérification admin purement basée sur le jeton pour éviter les erreurs de lecture document
    function isAdmin() {
      return isSignedIn() && 
             (request.auth.token.email == 'f.mallet81@gmail.com' || 
              request.auth.token.email == 'f.mallet81@outlook.com');
    }

    // --- 3. DROITS D'ÉCRITURE ADMIN ---

    match /system_notifications/{id} { allow write: if isAdmin(); }
    match /app_settings/{id} { allow write: if isAdmin(); }
    match /meteo_caledonie/{id} { 
      allow write: if isAdmin(); 
      match /previsions/{prevId} { allow write: if isAdmin(); }
    }
    match /fish_species/{id} { allow write: if isAdmin(); }
    match /shared_access_tokens/{id} { allow write: if isAdmin(); }

    // --- 4. COLLECTIONS PROTÉGÉES (UTILISATEURS) ---

    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    // --- 5. FONCTIONNALITÉS APPLICATIVES ---

    match /hunting_sessions/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /vessels/{id} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /conversations/{id} {
      allow read, write: if isSignedIn() && (request.auth.uid == id || isAdmin());
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == id || isAdmin());
      }
    }

    match /access_tokens/{id} {
      allow read, write: if isSignedIn() || isAdmin();
    }

    match /stations/{document=**} {
      allow read: if isSignedIn() || isAdmin();
      allow write: if isAdmin();
    }
  }
}