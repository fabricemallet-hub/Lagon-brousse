/**
 * Core Philosophy: This ruleset enforces a strict user-ownership model for private data, 
 * while providing public read access to shared application data. The primary goal is to
 * ensure that users can only access and manage their own information, preventing any
 * cross-user data access or enumeration.
 *
 * Data Structure:
 * - /users/{userId}: Contains private user account information.
 * - /locations/{locationId}: Contains public location data.
 * - /stations/{stationId}: Contains public tide station data.
 * - /stations/{stationId}/tides/{date}: Contains archived tide data.
 * - /hunting_sessions/{sessionId}: Contains metadata for a hunting session.
 * - /hunting_sessions/{sessionId}/participants/{userId}: Contains real-time data for a participant.
 *
 * Key Security Decisions:
 * - User Isolation: A user can only interact with their own document at /users/{userId}.
 * - No User Listing for non-admins: Listing the entire /users collection is disallowed for privacy.
 * - Admin Listing: The administrator is allowed to list users.
 * - Public Read-Only Data: /locations is globally readable but not client-writable.
 * - Hunting Sessions:
 *   - Any authenticated user can create a session.
 *   - Only the organizer can delete the session document.
 *   - Session participants can read each other's data in real-time.
 *   - Users can only create, update, or delete their own participant document.
 * - Default Secure: Any path not explicitly defined denies all access.
 */

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'f.mallet81@outlook.com';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    function isCreatingOwnAccount(userId) {
      let data = request.resource.data;
      // Normal users can only create 'trial' accounts for themselves.
      // We must check all fields being sent from the client.
      let hasAllRequiredKeys = data.keys().hasAll(['id', 'email', 'displayName', 'subscriptionStatus', 'subscriptionStartDate', 'subscriptionExpiryDate', 'favoriteLocationIds']);
      let hasOnlyAllowedKeys = data.keys().size() == 7;

      return isOwner(userId) 
          && hasAllRequiredKeys && hasOnlyAllowedKeys
          && data.id == userId
          && data.email == request.auth.token.email
          && data.displayName is string && data.displayName.size() > 0 && data.displayName.size() < 30
          && data.subscriptionStatus == 'trial'
          && data.subscriptionStartDate is string
          && data.subscriptionExpiryDate is string
          && data.favoriteLocationIds is list && data.favoriteLocationIds.size() == 0;
    }
    
    function isCreatingOwnAdminAccount(userId) {
      let data = request.resource.data;
      // The admin can create their own 'admin' status account.
      // This rule covers the initial document creation.
      let hasAllRequiredKeys = data.keys().hasAll(['id', 'email', 'displayName', 'subscriptionStatus', 'favoriteLocationIds']);
      let hasOnlyAllowedKeys = data.keys().size() == 5;

      return isAdmin()
          && isOwner(userId)
          && hasAllRequiredKeys && hasOnlyAllowedKeys
          && data.id == userId
          && data.email == request.auth.token.email
          && data.displayName is string && data.displayName.size() > 0 && data.displayName.size() < 30
          && data.subscriptionStatus == 'admin'
          && data.favoriteLocationIds is list && data.favoriteLocationIds.size() == 0;
    }

    function isMaintainingOwnAccount(userId) {
      let incoming = request.resource.data;
      let existing = resource.data;
      
      // Users cannot change critical fields
      let areCriticalFieldsUnchanged = 
          incoming.subscriptionStatus == existing.subscriptionStatus &&
          incoming.subscriptionStartDate == existing.subscriptionStartDate &&
          incoming.subscriptionExpiryDate == existing.subscriptionExpiryDate &&
          incoming.id == existing.id &&
          incoming.email == existing.email;

      // Users can change their display name and favorite locations
      let isDisplayNameValid = incoming.displayName is string && incoming.displayName.size() > 2 && incoming.displayName.size() < 30;
      let areFavoritesValid = incoming.favoriteLocationIds is list;

      return isOwner(userId) 
          && resource != null
          && areCriticalFieldsUnchanged
          && isDisplayNameValid
          && areFavoritesValid;
    }

    // ----------------------------------------------------------------------
    // Collection Rules
    // ----------------------------------------------------------------------

    match /users/{userId} {
      allow read: if isAdmin();
      allow get: if isOwner(userId);
      allow create: if isCreatingOwnAccount(userId) || isCreatingOwnAdminAccount(userId);
      allow update: if isMaintainingOwnAccount(userId) || isAdmin();
      allow delete: if isExistingOwner(userId);
    }

    match /locations/{locationId} {
      allow get: if true;
      allow list: if true;
      allow create: if false; 
      allow update: if false;
      allow delete: if false;
    }

    match /stations/{stationId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isAdmin();

      match /tides/{date} {
        allow get: if true;
        allow list: if true; // Allows querying for date ranges
        allow create, update, delete: if isAdmin();
      }
    }

    match /hunting_sessions/{sessionId} {
      allow create: if isSignedIn();
      allow get: if isSignedIn();
      allow delete: if isOwner(resource.data.organizerId);
      allow list: if false;

      match /participants/{userId} {
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
        allow get, list: if exists(/databases/$(database)/documents/hunting_sessions/$(sessionId)/participants/$(request.auth.uid));
      }
    }

    match /access_tokens/{tokenId} {
      allow read: if isAdmin();
      allow get: if isSignedIn();
      
      allow create, delete: if isAdmin();
      
      function isRedeemingOwnToken() {
        return request.resource.data.redeemedBy == request.auth.uid
          && request.resource.data.status == 'redeemed'
          && resource.data.status == 'active';
      }
      
      allow update: if isAdmin() || isRedeemingOwnToken();
    }
  }
}
