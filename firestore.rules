rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'f.mallet81@outlook.com';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ----------------------------------------------------------------------
    // Collection Rules
    // ----------------------------------------------------------------------

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      
      // Allow a user to create their own document.
      // This simple rule prevents deployment conflicts. The client-side code in 
      // FirebaseProvider is responsible for creating the correct document structure.
      allow create: if isOwner(userId);
      
      // An owner can update their own document, and an admin can update any document.
      allow update: if isOwner(userId) || isAdmin();
      
      // Disallow client-side deletion for now to prevent accidental data loss.
      allow delete: if false; 
    }

    match /locations/{locationId} {
      // Publicly readable data.
      allow get, list: if true;
      // Data is managed by the admin, not client-writable.
      allow write: if false;
    }

    match /stations/{stationId} {
      allow get, list: if true;
      allow write: if isAdmin();

      match /tides/{date} {
        allow get, list: if true;
        allow write: if isAdmin();
      }
    }

    match /hunting_sessions/{sessionId} {
      allow create, get: if isSignedIn();
      allow delete: if resource.data.organizerId == request.auth.uid;
      allow list: if false; // Do not allow listing all sessions.

      match /participants/{userId} {
        allow create, update, delete: if isOwner(userId);
        // Allow any participant of the session to read other participants' data.
        allow read: if exists(/databases/$(database)/documents/hunting_sessions/$(sessionId)/participants/$(request.auth.uid));
      }
    }

    match /access_tokens/{tokenId} {
      allow read: if isAdmin(); // List tokens
      allow get: if isSignedIn(); // Read a single token
      allow create, delete: if isAdmin();
      
      function isRedeemingOwnToken() {
        return request.resource.data.redeemedBy == request.auth.uid
          && request.resource.data.status == 'redeemed'
          && resource.data.status == 'active';
      }
      
      allow update: if isAdmin() || isRedeemingOwnToken();
    }
  }
}
