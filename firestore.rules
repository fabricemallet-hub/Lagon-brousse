
rules_version = '2';

/**
 * LAGON & BROUSSE NC - SECURITY POLICY
 */

service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBAL HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && 
        (
          (request.auth.token.email != null && request.auth.token.email.lower() in ['f.mallet81@gmail.com', 'f.mallet81@outlook.com']) ||
          (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
           get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionStatus == 'admin')
        );
    }

    // --- COLLECTION RULES ---

    // Notifications Système (Priorité absolue et accès public total en lecture)
    match /system_notifications/{notifId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // Paramètres de l'application
    match /app_settings/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Météo NC Live
    match /meteo_caledonie/{communeId} {
      allow read: if true;
      allow write: if isAdmin();
      match /{allPaths=**} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    // Guide des Poissons
    match /fish_species/{fishId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Profils utilisateurs
    match /users/{userId} {
      allow read, write: if (isSignedIn() && request.auth.uid == userId) || isAdmin();
      
      match /sowings/{sowingId} {
        allow read, write: if (isSignedIn() && request.auth.uid == userId) || isAdmin();
      }
      match /fishing_spots/{spotId} {
        allow read, write: if (isSignedIn() && request.auth.uid == userId) || isAdmin();
      }
    }

    // Sessions de chasse
    match /hunting_sessions/{sessionId} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    // Tracker maritime
    match /vessels/{vesselId} {
      allow read, write: if isSignedIn();
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    // Messagerie (Support)
    match /conversations/{convId} {
      allow read, write: if (isSignedIn() && request.auth.uid == convId) || isAdmin();
      match /{allPaths=**} {
        allow read, write: if (isSignedIn() && request.auth.uid == convId) || isAdmin();
      }
    }

    // Jetons d'accès
    match /access_tokens/{tokenId} {
      allow read, write: if isSignedIn();
    }
    match /shared_access_tokens/{tokenId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Stations et Archives
    match /stations/{stationId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
      match /{allPaths=**} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
      }
    }
    
    // Default catch-all (Sécurité renforcée)
    match /{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
