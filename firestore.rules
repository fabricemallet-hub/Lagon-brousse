rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // REVISION: FINAL_STABLE_RESYNC_20240524_1320
    
    function isAuth() { return request.auth != null; }
    function isAdmin() { 
      return isAuth() && (
        request.auth.token.email.lower() == 'f.mallet81@gmail.com' || 
        request.auth.token.email.lower() == 'f.mallet81@outlook.com'
      );
    }

    // Sessions de Chasse : Autoriser Lecture/Ecriture pour tous les connectés pour debug
    match /hunting_sessions/{sessionId} {
      allow read, write: if isAuth();
      match /{allPaths=**} { allow read, write: if isAuth(); }
    }

    // Profils Utilisateurs : Propriétaire ou Admin
    match /users/{userId} {
      allow read, write: if isAdmin() || (isAuth() && request.auth.uid == userId);
      match /{allPaths=**} { allow read, write: if isAdmin() || (isAuth() && request.auth.uid == userId); }
    }

    // Vessel Tracker
    match /vessels/{vId} {
      allow read: if isAuth();
      allow write: if isAdmin() || (isAuth() && request.auth.uid == vId);
      match /{allPaths=**} { allow read, write: if isAuth(); }
    }

    // Messagerie
    match /conversations/{cId} {
      allow read, write: if isAdmin() || (isAuth() && request.auth.uid == cId);
      match /{allPaths=**} { allow read, write: if isAdmin() || (isAuth() && request.auth.uid == cId); }
    }

    // Règle par défaut pour le reste
    match /{allPaths=**} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
  }
}