rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // DÉVELOPPEMENT : ACCÈS TOTAL POUR DÉBLOQUER LE PROJET
    // ======================================================
    
    // On autorise tout pour le moment pour supprimer les blocages de déploiement
    // La sécurité sera renforcée en fin de projet.
    match /{allPaths=**} {
      allow read, write: if true;
    }
  }
}
