rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // DEPLOY_ID: 20240524_FORCE_RESYNC_V9
    
    function isAuth() { return request.auth != null; }
    function isAdmin() { 
      return isAuth() && (
        request.auth.token.email.lower() == 'f.mallet81@gmail.com' || 
        request.auth.token.email.lower() == 'f.mallet81@outlook.com'
      );
    }

    // Accès simplifié pour les sessions de chasse
    match /hunting_sessions/{sessionId} {
      allow read, create: if isAuth();
      allow update, delete: if isAuth() && (resource.data.organizerId == request.auth.uid || isAdmin());
      
      match /participants/{userId} {
        allow read, write: if isAuth();
      }
    }

    // Profils Utilisateurs
    match /users/{userId} {
      allow read, write: if isAdmin() || (isAuth() && request.auth.uid == userId);
      match /{allPaths=**} { allow read, write: if isAdmin() || (isAuth() && request.auth.uid == userId); }
    }

    // Vessel Tracker
    match /vessels/{vId} {
      allow read: if isAuth();
      allow write: if isAdmin() || (isAuth() && request.auth.uid == vId);
      match /{allPaths=**} { allow read, write: if isAuth(); }
    }

    // Règle par défaut pour tout le reste
    match /{allPaths=**} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
  }
}