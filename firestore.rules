
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // 1. DÉVELOPPEMENT : PERMISSIONS SIMPLIFIÉES
    // ======================================================
    
    // On autorise tout pour le moment pour débloquer le développement
    // La sécurité sera renforcée en fin de projet.
    match /{allPaths=**} {
      allow read, write: if true;
    }

    // Fonction de secours si besoin de filtrer
    function isSignedIn() {
      return request.auth != null;
    }
  }
}
