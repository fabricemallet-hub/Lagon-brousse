rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // DEPLOY_ID: RECOVERY_STABLE_V6
    
    function isAuth() { return request.auth != null; }
    function isAdmin() { 
      return isAuth() && (
        request.auth.token.email.lower() in ['f.mallet81@gmail.com', 'f.mallet81@outlook.com'] ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionStatus == 'admin'
      );
    }

    // Sessions de chasse : Autorisation explicite de lecture/écriture pour tous les connectés
    match /hunting_sessions/{sessionId} {
      allow read, write: if isAuth();
      match /participants/{userId} {
        allow read, write: if isAuth();
      }
    }

    // Profils Utilisateurs
    match /users/{userId} {
      allow read, write: if isAdmin() || (isAuth() && request.auth.uid == userId);
      match /{allPaths=**} { 
        allow read, write: if isAdmin() || (isAuth() && request.auth.uid == userId); 
      }
    }

    // Vessel Tracker
    match /vessels/{vId} {
      allow read, write: if isAuth();
      match /{allPaths=**} { allow read, write: if isAuth(); }
    }

    // Règle par défaut pour le reste (Aide, Conversations, Tokens)
    match /{allPaths=**} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
  }
}
