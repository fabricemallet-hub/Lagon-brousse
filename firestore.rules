rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // DEPLOY_ID: HUNTING_TACTICAL_RESTORE_V1
    
    function isAuth() { return request.auth != null; }
    function isAdmin() { 
      return isAuth() && (
        request.auth.token.email.lower() == 'f.mallet81@gmail.com' || 
        request.auth.token.email.lower() == 'f.mallet81@outlook.com' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionStatus == 'admin'
      );
    }

    // Accès global en lecture pour les membres (nécessaire pour le listage des sessions)
    match /hunting_sessions/{sessionId} {
      allow read, write: if isAuth();
      match /participants/{userId} {
        allow read, write: if isAuth();
      }
    }

    // Profils Utilisateurs
    match /users/{userId} {
      allow read, write: if isAdmin() || (isAuth() && request.auth.uid == userId);
      match /{allPaths=**} { allow read, write: if isAdmin() || (isAuth() && request.auth.uid == userId); }
    }

    // Vessel Tracker
    match /vessels/{vId} {
      allow read, write: if isAuth();
      match /{allPaths=**} { allow read, write: if isAuth(); }
    }

    // Règle par défaut
    match /{allPaths=**} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
  }
}