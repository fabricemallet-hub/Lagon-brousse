
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FONCTIONS DE BASE ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.role == "admin" ||
        request.auth.uid in ["K9cVYLVUk1NV99YV3anebkugpPp1", "ipupi3Pg4RfrSEpFyT69BtlCdpi2"]
      );
    }

    function isPro() {
      return isSignedIn() && request.auth.token.role == "professional";
    }

    // --- COMMERCES & BUSINESS ---
    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if isPro();
      allow update, delete: if isPro() && resource.data.ownerId == request.auth.uid;

      match /promotions/{promoId} {
        allow get, list: if true;
        allow write: if isPro() && get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId == request.auth.uid;
      }
    }

    // --- CAMPAGNES ---
    match /campaigns/{id} {
      allow create: if isPro();
      allow read: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin());
    }

    // --- CMS SUPPORT & FAQ ---
    match /cms_support/faq/items/{id} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /cms_support/tickets/items/{id} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow list: if isAdmin();
      allow update, delete: if isAdmin();
    }

    // --- UTILISATEURS ---
    match /users/{userId} {
      allow read: if isSignedIn(); // Permet aux pros de compter le reach
      allow write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    // --- DEFAUT ---
    match /{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
