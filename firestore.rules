
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Les emails administrateurs autorisés
      return isSignedIn() && (
        request.auth.token.email == 'f.mallet81@outlook.com' || 
        request.auth.token.email == 'f.mallet81@gmail.com'
      );
    }

    // ----------------------------------------------------------------------
    // Collection: users
    // Purpose: Stores private user account information.
    // ----------------------------------------------------------------------
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();
      
      match /fishing_spots/{spotId} {
        allow read, write, delete: if isOwner(userId);
      }

      match /sowings/{sowingId} {
        allow read, write, delete: if isOwner(userId);
      }
    }

    // ----------------------------------------------------------------------
    // Collection: vessels (Real-time tracking)
    // ----------------------------------------------------------------------
    match /vessels/{userId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isOwner(userId);

      match /history/{pointId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isOwner(userId);
      }
    }

    // ----------------------------------------------------------------------
    // Collection: locations
    // ----------------------------------------------------------------------
    match /locations/{locationId} {
      allow read: if true;
      allow write: if false;
    }
    
    // ----------------------------------------------------------------------
    // Collection: stations & subcollections
    // ----------------------------------------------------------------------
    match /stations/{stationId} {
      allow read: if true;
      allow write: if isAdmin();
      
      match /tides/{date} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }
    
    // ----------------------------------------------------------------------
    // Collection: hunting_sessions
    // Purpose: Manages real-time group hunting sessions.
    // ----------------------------------------------------------------------
    match /hunting_sessions/{sessionId} {
      // Lecture document et listage collection autorisés pour les membres connectés
      allow get, list: if isSignedIn();
      
      // Création réservée à l'organisateur déclaré
      allow create: if isSignedIn() && request.resource.data.organizerId == request.auth.uid;
      
      // Mise à jour (statuts, etc.) par l'organisateur ou l'admin
      allow update: if isAdmin() || (isSignedIn() && resource.data.organizerId == request.auth.uid);
      
      // Suppression réservée à l'organisateur ou l'admin
      allow delete: if isAdmin() || (isSignedIn() && resource.data.organizerId == request.auth.uid);
      
      // Participants subcollection
      match /participants/{userId} {
        allow get, list: if isSignedIn();
        allow create, update, delete: if isOwner(userId) || isAdmin();
      }
    }

    // ----------------------------------------------------------------------
    // Collection: access_tokens
    // ----------------------------------------------------------------------
    match /access_tokens/{tokenId} {
      allow read, write: if isAdmin();
      allow get: if isSignedIn();
      
      function isRedeemingOwnToken() {
        let isBecomingRedeemed = request.resource.data.status == 'redeemed';
        let wasActive = resource.data.status == 'active';
        let isRedeemer = request.resource.data.redeemedBy == request.auth.uid;
        return isBecomingRedeemed && wasActive && isRedeemer;
      }
      allow update: if isRedeemingOwnToken();
    }
    
    // ----------------------------------------------------------------------
    // Collection: shared_access_tokens
    // ----------------------------------------------------------------------
    match /shared_access_tokens/{tokenId} {
      allow write: if isAdmin();
      allow read: if isSignedIn();
    }

    // ----------------------------------------------------------------------
    // Collection: conversations
    // ----------------------------------------------------------------------
    match /conversations/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();

      match /messages/{messageId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }
  }
}
